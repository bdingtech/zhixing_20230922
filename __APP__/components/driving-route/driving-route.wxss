.driving-plan-container {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.flex-1 {
  flex: 1;
  overflow: hidden;
}
.card-container {
  width: 100%;
  padding-top: 10px;
  padding-bottom: 13px;
  box-sizing: border-box;
}
.weui-navbar {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.weui-navbar__item {
  flex: 1;
  text-align: center;
}
.weui-bar__item_on .card-primary,
.weui-bar__item_on .card-secondary {
  color: #427cff;
}
.card-primary {
  font-family: PingFangSC-Semibold;
  font-size: 20px;
  line-height: 28px;
  letter-spacing: 0;
  margin-bottom: 1px;
}
.card-secondary {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  line-height: 17px;
  letter-spacing: 0;
}
.bottom-button {
  border-top: 1px solid #e5e5e5;
  margin: 0 20px;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.button-left {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  height: 50px;
}
.button-right {
  width: 113px;
  height: 34px;
  line-height: 34px;
  text-align: center;
  color: #fff;
  border-radius: 15px;
  background-color: #427cff;
}
.button-center {
  justify-content: center;
}
.button-item {
  display: -webkit-flex;
  display: flex;
  height: 100%;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666;
  letter-spacing: 0;
}
.icon {
  width: 20px;
  height: 20px;
  margin-right: 4px;
}
