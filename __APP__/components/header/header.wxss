.container {
  position: relative;
}
.header-container {
  width: 100%;
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 999;
}
.title-bar-center {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
}
.title-bar-left {
  display: -webkit-flex;
  display: flex;
  justify-content: left;
  margin-left: 45px;
}
.back-btn-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}
.back-btn {
  position: absolute;
  left: 0;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
}
.btn-leftarrow {
  vertical-align: middle;
  transform: rotate(225deg);
  border-right: 2px solid #000;
  border-top: 2px solid #000;
  width: 10px;
  height: 10px;
}
