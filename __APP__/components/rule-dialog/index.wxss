@import "/wxss/common.wxss";
.dialog-content::after {
  background-image: linear-gradient(0, #fff 20%, hsla(0, 0%, 100%, 0));
  border-radius: 0 0 8rpx 8rpx;
  bottom: 0;
  content: "";
  height: 102rpx;
  left: 0;
  position: absolute;
  right: 0;
}
.dialog-rule-wrap {
  max-height: 568rpx;
  overflow-y: scroll;
  padding-bottom: 54rpx;
}
.dialog-sub-title {
  color: #4a4a4a;
  display: block;
  font-size: 24rpx;
  font-weight: 700;
  text-align: left;
}
.dialog-rule-desc {
  color: #999;
  display: block;
  font-size: 24rpx;
  margin-top: 8rpx;
  padding-bottom: 24rpx;
  word-break: break-all;
}
