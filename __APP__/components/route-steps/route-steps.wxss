@import "/libs/style/iconfont.wxss";
.container {
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #efefef;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.flex-1 {
  flex: 1;
  overflow: hidden;
}
.h2-title {
  font-size: 20px;
  font-weight: 600;
}
.des-text {
  height: 20px;
  font-size: 14px;
  line-height: 20px;
  color: #888;
}
.color-grey {
  color: #666;
}
.color-primary {
  color: #427cff;
}
.base-icon {
  margin-right: 1px;
  display: inline-block;
  height: 20px;
  width: 20px;
}
.des-icon {
  width: 26px;
  height: 26px;
  display: inline-block;
}
.dashed-line {
  border-left: 6px dotted #666;
  top: 25px;
  left: 30px;
  bottom: 48px;
  z-index: 1;
}
.dashed-line,
.solid-line {
  position: absolute;
  width: 0;
}
.solid-line {
  top: 0;
  left: 10px;
  bottom: 0;
  z-index: 9;
}
.border-solid {
  border-left-style: solid;
  border-left-color: #3b69ef;
}
.border-dotted {
  border-left-style: dotted;
  border-left-color: #666;
}
.cards {
  justify-content: space-around;
  flex-direction: row;
  border-bottom: 1px solid #e5e5e5;
}
.card-item,
.cards {
  display: -webkit-flex;
  display: flex;
}
.card-item {
  width: 33.3%;
  padding: 8px 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
}
.meta-data {
  padding: 10px 20px;
  border-top: 1px solid #efefef;
  border-bottom: 1px solid #efefef;
}
.meta-data .title {
  height: 28px;
  font-size: 20px;
  color: #3b69ef;
  line-height: 28px;
}
.detail-wrapper {
  padding-top: 20px;
  position: relative;
}
.chilren-view {
  padding-top: 20px;
  margin-top: -20px;
  margin-bottom: 20px;
  background-color: #efefef;
}
.item {
  margin: 0 20px;
  padding-bottom: 28px;
  position: relative;
  z-index: 10;
}
.item-des {
  min-height: 22px;
  align-items: center;
}
.icon-box,
.item-des {
  flex-direction: row;
  display: -webkit-flex;
  display: flex;
}
.icon-box {
  position: relative;
  z-index: 11;
  justify-content: center;
  margin-right: 13px;
  width: 26px;
}
.item .title {
  font-size: 14px;
  color: #3b69ef;
}
.item .extra {
  margin-left: 39px;
  color: #333;
  font-size: 14px;
}
.item .extra .split-line {
  display: inline-block;
  margin: 0 10px;
}
.extra-btn-wrapper {
  display: -webkit-inline-flex;
  display: inline-flex;
  flex-direction: row;
  align-items: center;
}
.extra-btn {
  color: #3b69ef;
  margin-left: 8px;
  margin-right: 4px;
}
