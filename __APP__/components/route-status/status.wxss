.container {
  height: 86px;
  background-color: #fff;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.container,
.default-btn {
  font-size: 14px;
  color: #666;
}
.default-btn {
  width: 90px;
  height: 34px;
  margin-top: 8px;
  border-radius: 100px;
  line-height: 34px;
  text-align: center;
  background: #efefef;
  letter-spacing: 0;
}
.loading-icon {
  width: 28px;
  height: 28px;
  margin-right: 4px;
  background-image: url(data:image/png;base64,);
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  animation: loading 1s linear infinite;
}
@-webkit-keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(1turn);
  }
}
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(1turn);
  }
}
.loading {
  flex-direction: row;
}
