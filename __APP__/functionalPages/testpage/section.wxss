@import "/functionalPages/sub-vendors.wxss";
.debugger-utils {
  background: #fff;
  min-height: 100vh;
  padding: 30rpx 0;
  width: 100vw;
}
.debugger-utils .tip {
  color: #1a3b5d;
  font-size: 20rpx;
  margin-bottom: 15rpx;
  margin-top: 10rpx;
}
.debugger-utils .section {
  margin-bottom: 40rpx;
  padding: 0 20rpx;
}
.debugger-utils .section .webCompItem {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.debugger-utils .section .title {
  color: #333;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}
.debugger-utils .section .input {
  background: none;
  border: 2rpx solid #ced6e0;
  border-radius: 8rpx;
  box-shadow: none;
  box-sizing: border-box;
  color: #1a3b5d;
  flex: 1;
  font-size: 30rpx;
  height: 70rpx;
  padding: 10rpx 30rpx;
  transition: all 0.3s ease-in-out;
}
.debugger-utils .section .input:focus {
  border-color: #3d9cff;
  box-shadow: 0 10rpx 20rpx -13rpx rgba(32, 56, 117, 0.35);
}
.debugger-utils .section .tip {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.debugger-utils .section.hotel .item {
  -ms-flex-pack: justify;
  -ms-flex-align: center;
  align-items: center;
  background-color: #fff;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 28rpx -4rpx hsla(0, 0%, 89%, 0.65);
  color: #333;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  margin-bottom: 0;
  margin-top: 20rpx;
}
.debugger-utils .section.hotel .item .icon {
  border-radius: 40rpx;
  font-size: 36rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 25rpx;
  text-align: center;
  width: 70rpx;
}
.debugger-utils .section.hotel .item .operation {
  flex: auto;
  font-weight: 500;
  margin-left: 30rpx;
  text-align: left;
}
.debugger-utils .section.hotel .item .right-row {
  color: #999;
  margin-right: 50rpx;
}
.debugger-utils .section.hotel .item .switch {
  margin-right: 50rpx;
}
.debugger-utils .section.hotel .params {
  background: #eee;
  border-radius: 10rpx;
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 20rpx;
  padding: 20rpx;
}
.debugger-utils .section.hotel .params .txt {
  max-height: 80rpx;
  overflow: hidden;
  word-break: break-all;
}
.debugger-utils .row {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 20rpx;
}
.debugger-utils .row .btn {
  margin-left: 20rpx;
}
.debugger-utils .radio-group {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  width: 100%;
}
.debugger-utils .radio-btn {
  background: #fff;
  border: 2rpx solid #d9d9d9;
  border-left: 0;
  color: rgba(0, 0, 0, 0.65);
  display: inline-block;
  flex: 1;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0;
  position: relative;
  text-align: center;
  transition: color 0.3s, background 0.3s, border-color 0.3s;
}
.debugger-utils .radio-btn:first-child {
  border-left: 2rpx solid #d9d9d9;
  border-radius: 8rpx 0 0 8rpx;
}
.debugger-utils .radio-btn:last-child {
  border-radius: 0 8rpx 8rpx 0;
}
.debugger-utils .radio-btn.checked {
  background: #0080ff;
  border-color: #0080ff;
  color: #fff;
}
.debugger-utils .h5-textarea {
  background: #fff;
  border: 2rpx solid #d9d9d9;
  border-radius: 8rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  padding: 8rpx 22rpx;
  width: calc(100vw - 40rpx);
}
.debugger-utils .testbtn {
  background: #007fff;
  border-radius: 6rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  height: 70rpx;
  line-height: 70rpx;
  min-width: 132rpx;
  padding: 0 28rpx;
}
.debugger-utils .frow {
  -ms-flex-pack: justify;
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.debugger-utils .item {
  margin-bottom: 20rpx;
}
.debugger-utils .item :first-child {
  margin-bottom: 10rpx;
}
