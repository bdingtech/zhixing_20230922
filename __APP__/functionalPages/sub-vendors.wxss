.share-pop-wrap {
  bottom: 0;
  display: none;
  height: 100%;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  width: 100%;
  z-index: 999;
}
.share-pop-wrap.show {
  display: block;
}
.share-pop-wrap .mask {
  background: rgba(0, 0, 0, 0.4);
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
}
.share-pop-wrap .tit {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 48rpx;
  padding: 36rpx 0;
  text-align: center;
}
.share-pop-wrap .content {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  bottom: 0;
  left: 0;
  position: absolute;
  right: 0;
}
.share-pop-wrap .content.ios {
  transform: translateY(100%);
  transition: none;
}
.share-pop-wrap .content.ios.transition {
  transform: translateY(0);
  transition: -webkit-transform 0.1s ease;
  transition: transform 0.1s ease;
  transition: transform 0.1s ease, -webkit-transform 0.1s ease;
}
.share-pop-wrap .icon-closed {
  height: 44rpx;
  position: absolute;
  right: 36rpx;
  top: 36rpx;
  width: 44rpx;
}
.share-pop-wrap .btns {
  -ms-flex-align: center;
  -ms-flex-pack: justify;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 70rpx calc(30rpx + env(safe-area-inset-bottom));
}
.share-pop-wrap .btns,
.share-pop-wrap .btns .share {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.share-pop-wrap .btns .share {
  -ms-flex-pack: center;
  background-color: #fff;
  flex: 1;
  flex-wrap: wrap;
  justify-content: center;
}
.share-pop-wrap .share-icon {
  height: 100rpx;
  width: 100rpx;
}
.share-pop-wrap .txt {
  color: #333;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 40rpx;
  margin-top: 10rpx;
  text-align: center;
  width: 100%;
}
.popup-cover .share-bg {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  bottom: 0;
  color: #333;
  font-size: 28rpx;
  left: 0;
  padding: 30rpx 0 70rpx;
  position: absolute;
  right: 0;
  text-align: center;
  transform: translateY(100%);
  transition: none;
  z-index: 1100;
}
.popup-cover .share-bg.active {
  transform: translateY(0);
  transition: -webkit-transform 0.2s ease;
  transition: transform 0.2s ease;
  transition: transform 0.2s ease, -webkit-transform 0.2s ease;
}
.share-bg .popop_title {
  margin: 10rpx auto;
}
.share-wechat {
  border-radius: 24rpx 24rpx 0 0;
}
.share-bg .item,
.share-wechat {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
}
.share-bg .item {
  flex-direction: column;
  margin: 0 30rpx;
  padding-right: 140rpx;
}
.share-bg .close {
  height: 24rpx;
  padding: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  width: 24rpx;
}
.share-wechat .img {
  margin-bottom: 10rpx;
  margin-top: 15rpx;
}
.share-wechat .reset-button {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  border: none;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-direction: column;
  font-size: inherit;
  justify-content: center;
  line-height: inherit;
  margin: 0;
  padding: 0;
  width: 200rpx;
}
.share-wechat .reset-button:after {
  display: none;
}
.popup-cover {
  position: fixed;
  top: 0;
  z-index: 100000000000000;
}
.popup-cover,
.popup-mask {
  height: 100vh;
  left: 0;
  width: 100vw;
}
.popup-mask {
  background: rgba(0, 0, 0, 0.411);
  bottom: 0;
  position: absolute;
  right: 0;
  z-index: 1e22;
}
.share-layer {
  box-sizing: border-box;
  height: 100%;
  left: 0;
  position: fixed;
  right: 0;
  text-align: center;
  top: 0;
  width: 100%;
  z-index: 1100;
}
.share-layer .img {
  left: 0;
  position: absolute;
  right: 0;
  top: 0rpx;
  width: 750rpx;
}
.share_poster {
  height: 95rpx;
  width: 95rpx;
}
.share_button {
  height: 94rpx;
  margin: 0 auto;
  width: 100rpx;
}
.post_canvas {
  position: fixed;
  top: 9999rpx;
  width: 375rpx;
}
