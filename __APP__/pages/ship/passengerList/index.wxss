@import "/pages/ship/sub-vendors.wxss";
.ship-passenger-list {
  margin: 16rpx 16rpx 0;
  position: relative;
}
.ship-passenger-list .passenger-panel {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
}
.ship-passenger-list .passenger-panel .pas-add {
  background: #edf6fe;
  border-radius: 22rpx;
  color: #198cff;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  height: 80rpx;
  letter-spacing: 0;
  margin-bottom: 12rpx;
}
.ship-passenger-list .passenger-panel .pas-add .icon-add {
  height: 40rpx;
  margin-right: 6rpx;
  width: 40rpx;
}
.ship-passenger-list .passenger-panel .pas-list .pas-scroll {
  max-height: 1000rpx;
}
.ship-passenger-list .passenger-panel .pas-list .passenger-item {
  padding: 32rpx 0 30rpx;
}
.ship-passenger-list .passenger-panel .pas-list .passenger-item .ifont2-edit {
  color: #ccc;
  font-size: 38rpx;
  margin-right: 20rpx;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .pas-cont
  .p-name {
  word-wrap: break-word;
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 40rpx;
  max-width: 442rpx;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .pas-cont
  .p-type {
  color: #82868f;
  font-family: PingFangSC-Regular;
  font-size: 18rpx;
  font-weight: 400;
  height: 32rpx;
  letter-spacing: 0;
  line-height: 30rpx;
  margin-left: 10rpx;
  padding: 0 6rpx;
  position: relative;
  z-index: 1;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .pas-cont
  .p-type::after {
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
  box-sizing: border-box;
  content: "";
  height: 200%;
  left: -50%;
  position: absolute;
  top: -50%;
  transform: scale(0.49);
  transform-origin: center;
  width: 200%;
  z-index: -1;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .pas-cont
  .idcard {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 32rpx;
  margin-top: 8rpx;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .pas-cont
  .idcard.card-no {
  margin-left: 8rpx;
}
.ship-passenger-list .passenger-panel .pas-list .passenger-item .pl30 {
  -ms-flex-item-align: stretch;
  align-self: stretch;
  padding-left: 30rpx;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .ifont2-checkboxed {
  color: #198cff;
  font-size: 40rpx;
}
.ship-passenger-list
  .passenger-panel
  .pas-list
  .passenger-item
  .ifont2-checkbox {
  color: #ccc;
  font-size: 40rpx;
}
.ship-passenger-list .passenger-panel .pas-list .h-line {
  background: rgba(0, 0, 0, 0.05);
  height: 2rpx;
  margin-left: 56rpx;
  transform: scaleY(0.5);
}
.ship-passenger-list .bottom-fixed-panel {
  background: #fff;
  border-radius: 40rpx;
  bottom: 0;
  box-shadow: 0 0 32rpx 0 rgba(0, 0, 0, 0.04);
  left: 0;
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
}
.ship-passenger-list .bottom-fixed-panel .confirm-btn {
  background: #198cff;
  border-radius: 24rpx;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
  height: 88rpx;
  letter-spacing: 0;
  line-height: 88rpx;
}
