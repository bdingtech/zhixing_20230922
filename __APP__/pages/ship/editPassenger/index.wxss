@import "/pages/ship/sub-vendors.wxss";
.passenger-booking {
  background: #fff;
  border-radius: 40rpx;
  margin: 16rpx 16rpx 0;
  padding: 0 30rpx;
}
.passenger-booking .p-edit-item {
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 40rpx;
  padding: 34rpx 0;
}
.passenger-booking .p-edit-item .label {
  -ms-flex-negative: 0;
  color: #666;
  flex-shrink: 0;
  width: 160rpx;
}
.passenger-booking .p-edit-item .edit-value {
  color: #222;
}
.passenger-booking .p-edit-item .placeholder-desc {
  color: #ccc;
}
.passenger-booking .p-edit-item .ifont-arrdown {
  color: #ccc;
  font-size: 24rpx;
}
.passenger-booking .p-edit-item .ifont2-checkboxed {
  color: #198cff;
  font-size: 40rpx;
}
.passenger-booking .p-edit-item .ifont2-checkbox {
  color: #ccc;
  font-size: 40rpx;
}
.passenger-booking .p-edit-item .ifont2-zhankai_linea_12 {
  color: #666;
  font-size: 24rpx;
}
.passenger-booking .p-edit-item .gender-item.mr40 {
  margin-right: 80rpx;
}
.passenger-booking .p-edit-item .gender-item .edit-value {
  margin-left: 12rpx;
}
.passenger-booking .p-edit-item .birthdate {
  width: 100%;
}
.tips {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0;
  margin: 32rpx 32rpx 0;
}
.tips .tit {
  color: #666;
  line-height: 36rpx;
}
.tips .desc {
  color: #999;
  line-height: 32rpx;
  margin-top: 8rpx;
}
.bottom-fixed-panel {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  bottom: 0;
  box-shadow: 0 0 32rpx 0 rgba(0, 0, 0, 0.04);
  left: 0;
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
}
.bottom-fixed-panel .confirm-btn {
  background: #198cff;
  border-radius: 24rpx;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
  height: 88rpx;
  letter-spacing: 0;
  line-height: 88rpx;
}
.pas-type-select-drawer .zt-drawer {
  background: #f5f5f5;
  border-radius: 40rpx 40rpx 0 0;
}
.pas-type-select-drawer .content .tit {
  color: #333;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 0;
  line-height: 42rpx;
  margin-bottom: 32rpx;
  margin-top: 32rpx;
  text-align: center;
}
.pas-type-select-drawer .content .pas-type-item {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 16rpx 16rpx;
  padding: 24rpx 32rpx;
}
.pas-type-select-drawer .content .pas-type-item.disabled {
  opacity: 0.6;
}
.pas-type-select-drawer .content .pas-type-item .icon {
  height: 56rpx;
  margin-right: 16rpx;
  width: 56rpx;
}
.pas-type-select-drawer .content .pas-type-item .type-name {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 40rpx;
}
.pas-type-select-drawer .content .pas-type-item .type-desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  max-width: 400rpx;
}
.pas-type-select-drawer .content .pas-type-item .price {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  margin-left: 36rpx;
  margin-right: 12rpx;
}
.pas-type-select-drawer .content .pas-type-item .ifont2-checkbox {
  color: #ccc;
  font-size: 40rpx;
}
.pas-type-select-drawer .content .pas-type-item .ifont2-checkboxed {
  color: #198cff;
  font-size: 40rpx;
}
.pas-type-select-drawer .content .bottom-fixed-btn {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: 64rpx;
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
}
.pas-type-select-drawer .content .bottom-fixed-btn .btn {
  border-radius: 24rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
}
.pas-type-select-drawer .content .bottom-fixed-btn .cancel-btn {
  background: #edf6ff;
  color: #198cff;
  margin-right: 16rpx;
}
.pas-type-select-drawer .content .bottom-fixed-btn .confirm-btn {
  background: #198cff;
  color: #fff;
}
.ship-editpas-cardtype-drawer .zt-drawer {
  background: #f5f5f5;
  border-radius: 40rpx 40rpx 0 0;
}
.ship-editpas-cardtype-drawer .content {
  border-radius: 40rpx 40rpx 0 0;
  padding: 36rpx 0 calc(40rpx + env(safe-area-inset-bottom));
  position: relative;
}
.ship-editpas-cardtype-drawer .content .drawer-tit {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 42rpx;
  text-align: center;
}
.ship-editpas-cardtype-drawer .content .ifont2-close {
  color: #ccc;
  font-size: 48rpx;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}
.ship-editpas-cardtype-drawer .content .type-list {
  background: #fff;
  border-radius: 24rpx;
  margin: 36rpx 16rpx 0;
  padding: 0 32rpx;
}
.ship-editpas-cardtype-drawer .content .type-list .item {
  padding: 34rpx 0;
  text-align: center;
}
.ship-editpas-cardtype-drawer .content .type-list .item .desc {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 40rpx;
}
.ship-editpas-cardtype-drawer .content .type-list .h-line {
  background: rgba(0, 0, 0, 0.05);
  height: 2rpx;
  transform: scaleY(0.5);
}
.ship-edit-passenger {
  position: relative;
}
