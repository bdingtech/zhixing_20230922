@import "/pages/usercenter/sub-vendors.wxss";
.account-application .item {
  -ms-flex-pack: justify;
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
  color: #222;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 32rpx;
  height: 108rpx;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 38rpx 40rpx;
}
.account-application .item .iconfont {
  color: #ccc;
  font-size: 24rpx;
  margin-top: 2rpx;
}
.account-application .logout-modal {
  background: #fff;
  border-radius: 32rpx;
  box-sizing: border-box;
  padding: 40rpx;
  position: relative;
  text-align: center;
  width: 600rpx;
  z-index: 1;
}
.account-application .logout-modal .title {
  color: #222;
  font-size: 40rpx;
  font-weight: 500;
  height: 48rpx;
  line-height: 48rpx;
  margin-bottom: 30rpx;
}
.account-application .logout-modal .content {
  color: #666;
  font-size: 28rpx;
  font-weight: 400;
  height: 38rpx;
  line-height: 38rpx;
  margin-bottom: 40rpx;
}
.account-application .logout-modal .btn-box {
  -ms-flex-pack: justify;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: space-between;
}
.account-application .logout-modal .btn {
  background: #f5f5f5;
  border-radius: 12rpx;
  color: #666;
  font-size: 32rpx;
  font-weight: 400;
  height: 88rpx;
  line-height: 88rpx;
  width: 250rpx;
}
.account-application .logout-modal .bgcolor-primary {
  background: #0080ff;
  color: #fff;
}
