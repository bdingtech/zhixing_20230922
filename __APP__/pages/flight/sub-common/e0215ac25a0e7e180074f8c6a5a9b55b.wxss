.flight-draw-pop {
  position: relative;
}
.flight-draw-pop .zt-drawer {
  background: #f5f5f5;
  z-index: 10002;
}
.flight-draw-pop .zt-drawer-content {
  background-image: url(https://images3.c-ctrip.com/ztrip/zhixingios/shouye/tiyanguan/img_tiyanguan_bg@3x.png)
    no-repeat;
  background-size: cover;
}
.flight-draw-pop .title-bg-icon {
  height: 144rpx;
  position: absolute;
  right: 8rpx;
  top: 16rpx;
  width: 144rpx;
  z-index: -1;
}
.flight-draw-pop .draw-title {
  color: #0b4253;
  font-family: PingFangSC-Semibold;
  font-size: 40rpx;
  font-weight: 600;
  height: 44rpx;
  line-height: 44rpx;
  padding: 0 48rpx 40rpx;
}
.flight-draw-pop .draw-content {
  background: #fff;
  border-radius: 32rpx;
  margin: 0 16rpx 32rpx;
  padding: 32rpx;
}
.flight-draw-pop .draw-content .cont-head {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  font-weight: 500;
  height: 44rpx;
  line-height: 44rpx;
  margin-bottom: 10rpx;
  position: relative;
}
.flight-draw-pop .draw-content .cont-head::before {
  background: -webkit-gradient(
    linear,
    left bottom,
    left top,
    from(#9ceddd),
    to(#198cff)
  );
  background: -webkit-linear-gradient(bottom, #9ceddd, #198cff);
  background: -o-linear-gradient(bottom, #9ceddd 0, #198cff 100%);
  background: linear-gradient(0deg, #9ceddd, #198cff);
  border-radius: 4rpx;
  content: "";
  height: 30rpx;
  margin: 4rpx 10rpx 0 0;
  width: 10rpx;
}
.flight-draw-pop .draw-content .cont-head .rule {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  height: 32rpx;
  line-height: 32rpx;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}
.flight-draw-pop .draw-content .welfare-list {
  flex-wrap: wrap;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item {
  background: -webkit-gradient(
    linear,
    left top,
    right top,
    from(#fff9f6),
    to(#fff5f0)
  );
  background: -webkit-linear-gradient(left, #fff9f6, #fff5f0);
  background: -o-linear-gradient(left, #fff9f6 0, #fff5f0 100%);
  background: linear-gradient(90deg, #fff9f6, #fff5f0);
  border-radius: 16rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  overflow: hidden;
  padding: 26rpx 20rpx 26rpx 30rpx;
  position: relative;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.one {
  flex: 1;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.one .item-icon {
  margin: 0 10rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.one .item-bg-icon {
  right: 24rpx;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.two {
  padding-left: 16px;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three {
  padding-left: 8rpx;
  padding-right: 8rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two {
  flex: 1;
  flex-direction: column;
  margin-right: 16rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three .item-icon,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two .item-icon {
  margin: -6rpx 0 8rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three .item-desc,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two .item-desc {
  margin-bottom: 34rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three:last-of-type,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two:last-of-type {
  margin-right: 0;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three .item-bg-icon,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two .item-bg-icon {
  right: -20rpx;
  top: -24rpx;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.three .item-cont,
.flight-draw-pop .draw-content .welfare-list .welfare-item.two .item-cont {
  max-width: 100%;
  text-align: center;
  width: 100%;
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.four {
  flex-direction: row-reverse;
  width: calc(50% - 9rpx);
}
.flight-draw-pop .draw-content .welfare-list .welfare-item.four .item-bg-icon {
  right: -14rpx;
  top: -18rpx;
}
.flight-draw-pop
  .draw-content
  .welfare-list
  .welfare-item.four:nth-of-type(odd) {
  margin-right: 16rpx;
}
.flight-draw-pop .draw-content .welfare-list .item-bg-icon {
  height: 108rpx;
  position: absolute;
  width: 108rpx;
}
.flight-draw-pop .draw-content .welfare-list .item-icon {
  height: 92rpx;
  width: 92rpx;
}
.flight-draw-pop .draw-content .welfare-list .item-cont {
  overflow: hidden;
}
.flight-draw-pop .draw-content .welfare-list .item-title {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  height: 40rpx;
  line-height: 40rpx;
}
.flight-draw-pop .draw-content .welfare-list .item-desc {
  color: #ff5959;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.flight-draw-pop .draw-botm {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 0 32rpx 0 rgba(0, 0, 0, 0.04);
  padding: 16rpx 16rpx 84rpx;
  position: relative;
}
.flight-draw-pop .draw-botm .confirm-btn {
  background: #198cff;
  border-radius: 24rpx;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
}
.flight-draw-pop .draw-botm .btn-tag {
  background: url(https://images3.c-ctrip.com/ztrip/zhixingios/shouye/tiyanguan/img_tiyanguan_tips@3x.png)
    no-repeat 50% / cover;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 18rpx;
  font-weight: 500;
  height: 46rpx;
  line-height: 26rpx;
  margin: 20rpx 16rpx;
  padding: 2rpx 0 0 12rpx;
  position: absolute;
  right: 0;
  top: -12rpx;
  width: 96rpx;
  z-index: 1;
}
