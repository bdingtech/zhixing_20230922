page {
  background: #ececec;
}
.block {
  display: block;
}
.in-block {
  display: inline-block;
}
.v-middle {
  vertical-align: middle;
}
.text-2 {
  color: #9da5ff;
  font-size: 30rpx;
  line-height: 40rpx;
}
.text-3 {
  color: #7579a5;
  font-size: 24rpx;
  line-height: 34rpx;
}
.text-link {
  color: #7579a5;
  font-size: 30rpx;
  line-height: 96rpx;
  padding-right: 13px;
  position: relative;
  text-align: right;
}
.text-link::after {
  border-color: #c7c7cc;
  border-style: solid;
  border-width: 2px 2px 0 0;
  content: " ";
  display: inline-block;
  height: 6px;
  margin-top: -4px;
  position: relative;
  position: absolute;
  right: 2px;
  top: -2px;
  top: 50%;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  width: 6px;
}
.r-public-title {
  -webkit-box-pack: justify;
  -ms-flex-pack: justify;
  color: #2f3b41;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 24rpx;
  height: 70rpx;
  justify-content: space-between;
  line-height: 70rpx;
  padding: 6rpx 28rpx 0;
}
.r-public-title text {
  -webkit-box-orient: vertical;
  display: -webkit-box;
}
.back-link {
  color: #999;
}
.role-list {
  background: #fff;
  width: 750rpx;
}
.s-list-wrap {
  border-bottom: 1px solid #ececec;
  margin: 0 40rpx;
  padding: 30rpx 0;
}
.s-list {
  padding: 0 30rpx;
}
.s-img image {
  border: 1px solid #f3c258;
  border-radius: 19px;
  display: block;
  height: 38px;
  margin: 0 16rpx 0 0;
  width: 38px;
}
.s-list .text-2 {
  color: #4a4a4a;
  font-size: 14px;
  font-weight: 400;
  line-height: 22px;
}
.s-list .text-3 {
  color: #5f616a;
  font-size: 12px;
  line-height: 18px;
}
.s-list-wrap .text-link {
  padding-right: 30rpx;
}
.s-list-wrap .text-link::after {
  right: 30rpx;
}
.add-role-btn {
  margin: 80rpx;
}
.light-btn {
  background-image: linear-gradient(90deg, #daa23a 1%, #ae6e2f);
  border-radius: 2px;
  box-shadow: 0 2px 4px 0 hsla(0, 1%, 60%, 0.5);
  height: 80rpx;
  line-height: 80rpx;
}
.add-role-btn button.light-btn,
.light-btn {
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
.add-role-btn button.light-btn {
  height: 90rpx !important;
  line-height: 90rpx !important;
}
.add-role-btn .change-QQLogin {
  height: 90rpx;
  line-height: 90rpx;
}
