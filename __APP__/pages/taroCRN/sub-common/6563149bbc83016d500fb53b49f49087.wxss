.seat-selector-drawer .zt-drawer {
  background: #f5f5f5;
  max-height: 80vh !important;
}
.seat-selector-drawer .zt-drawer-header {
  padding: 0;
}
.seat-selector-drawer .hd {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 40rpx;
  font-weight: 500;
  line-height: 56rpx;
  padding: 32rpx 0 24rpx;
  text-align: center;
}
.seat-selector-drawer .bd {
  box-sizing: border-box;
  max-height: calc(80vh - 112rpx);
  overflow: auto;
  padding-bottom: calc(156rpx + env(safe-area-inset-bottom));
}
.seat-selector-drawer .bd .tips {
  background: #fef8e9;
  border-radius: 16rpx;
  margin: 0 16rpx;
  padding: 16rpx 0 16rpx 24rpx;
}
.seat-selector-drawer .bd .tips .tip {
  -ms-flex-align: center;
  align-items: center;
  color: #f76e21;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  height: 32rpx;
  line-height: 32rpx;
}
.seat-selector-drawer .bd .tips .tip::before {
  background: #f76e21;
  border-radius: 50%;
  content: "";
  height: 6rpx;
  margin-right: 8rpx;
  width: 6rpx;
}
.seat-selector-drawer .bd .tips .tip:first-child {
  margin-bottom: 8rpx;
}
.seat-selector-drawer .CDG-train,
.seat-selector-drawer .no-CDG-train {
  background: #fff;
  border-radius: 24rpx;
  margin: 16rpx 16rpx 0;
  padding: 24rpx 0 0;
}
.seat-selector-drawer .CDG-train .tit,
.seat-selector-drawer .no-CDG-train .tit {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  font-weight: 400;
  height: 36rpx;
  margin-left: 32rpx;
}
.seat-selector-drawer .CDG-train .seat-box,
.seat-selector-drawer .no-CDG-train .seat-box {
  margin-top: 8rpx;
}
.seat-selector-drawer .CDG-train .seat-box .seat-info,
.seat-selector-drawer .no-CDG-train .seat-box .seat-info {
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #ededed;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 0 32rpx;
  padding: 30rpx 0;
}
.seat-selector-drawer .CDG-train .seat-box .seat-info .name,
.seat-selector-drawer .no-CDG-train .seat-box .seat-info .name {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 40rpx;
}
.seat-selector-drawer .CDG-train .seat-box .seat-info .price,
.seat-selector-drawer .no-CDG-train .seat-box .seat-info .price {
  color: #666;
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.seat-selector-drawer .CDG-train .seat-box .seat-info .icon-checkbox,
.seat-selector-drawer .no-CDG-train .seat-box .seat-info .icon-checkbox {
  height: 40rpx;
  width: 40rpx;
}
.seat-selector-drawer .no-seat {
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 16rpx 16rpx 0;
  padding: 30rpx 32rpx;
}
.seat-selector-drawer .no-seat .name {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 40rpx;
}
.seat-selector-drawer .no-seat .price {
  color: #666;
  flex: 1;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 40rpx;
  text-align: center;
}
.seat-selector-drawer .no-seat .icon-checkbox {
  height: 40rpx;
  width: 40rpx;
}
.seat-selector-drawer .btn-box {
  -ms-flex-pack: justify;
  background: #fff;
  bottom: 0;
  box-shadow: 0 0 16rpx 0 rgba(0, 0, 0, 0.04);
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: space-between;
  left: 0;
  padding: 16rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  position: absolute;
  right: 0;
}
.seat-selector-drawer .btn-box .btn {
  border-radius: 24rpx;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0;
  width: 334rpx;
}
.seat-selector-drawer .btn-box .btn-cancel {
  background: #edf6ff;
  color: #198cff;
}
.seat-selector-drawer .btn-box .btn-confirm {
  background: #198cff;
  color: #fff;
}
