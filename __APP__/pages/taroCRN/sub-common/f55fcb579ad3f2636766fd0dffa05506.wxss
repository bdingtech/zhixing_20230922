.pas-phone-input-drawer {
  font-family: PingFangSC-Semibold;
}
.pas-phone-input-drawer.train-common-drawer.common-action-sheet
  .action-sheet-content {
  background: #f5f5f5;
}
.pas-phone-input-drawer .input-box {
  background: #fff;
  border-radius: 24rpx;
  margin: 0 16rpx 40rpx;
  padding: 30rpx 32rpx;
}
.pas-phone-input-drawer .phone-input-wrapper {
  background: #f5f5f5;
  border-radius: 20rpx;
  color: #222;
  font-size: 32rpx;
  font-weight: 600;
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 30rpx;
  white-space: nowrap;
}
.pas-phone-input-drawer .phone-input {
  margin-left: 24rpx;
}
.pas-phone-input-drawer .phone-input-placeholder {
  color: #ccc;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}
.pas-phone-input-drawer .input-note {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  margin-top: 20rpx;
}
.pas-phone-input-drawer .drawer-botm {
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  padding: 16rpx;
}
.pas-phone-input-drawer .confirm-btn {
  background: #198cff;
  border-radius: 20rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  height: 88rpx;
}
