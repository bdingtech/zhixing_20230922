@import "/pages/taroCRN/sub-vendors.wxss";
@import "/pages/taroCRN/sub-common/d21ca39141151ffc9630a87cc35d5e00.wxss";
.passenger-item {
  padding: 32rpx 0 30rpx;
}
.p-name {
  word-wrap: break-word;
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 40rpx;
  max-width: 442rpx;
}
.idcard {
  margin-top: 8rpx;
}
.idcard-txt {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 32rpx;
}
.pl30 {
  -ms-flex-item-align: stretch;
  align-self: stretch;
  padding-left: 30rpx;
}
page {
  height: 100vh;
}
.ship-passenger-list {
  background: #f5f5f5;
  height: 100%;
  position: relative;
}
.passenger-panel {
  -ms-flex-positive: 0;
  -ms-flex-negative: 1;
  background: #fff;
  border-radius: 24rpx;
  flex-grow: 0;
  flex-shrink: 1;
  margin: 16rpx 16rpx 0;
  min-height: 2rpx;
  padding: 32rpx;
  position: relative;
}
.passenger-list-content {
  flex: 1;
  min-height: 2rpx;
  position: relative;
  width: 100%;
  z-index: 1;
}
.pas-add {
  background: #edf6fe;
  border-radius: 22rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
  min-height: 80rpx;
}
.pas-list {
  -ms-flex-positive: 0;
  -ms-flex-negative: 1;
  flex-grow: 0;
  flex-shrink: 1;
  min-height: 2rpx;
}
.pas-add-txt {
  color: #198cff;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0;
}
.icon-add {
  height: 40rpx;
  margin-right: 6rpx;
  width: 40rpx;
}
.pas-scroll {
  -ms-flex-positive: 0;
  -ms-flex-negative: 1;
  flex-grow: 0;
  flex-shrink: 1;
  min-height: 2rpx;
}
.h-line {
  background: rgba(0, 0, 0, 0.05);
  height: 2rpx;
  margin-left: 56rpx;
  transform: scaleY(0.5);
}
.bottom-padding {
  padding-top: 136rpx;
}
