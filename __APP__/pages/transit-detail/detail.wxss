@import "/libs/style/iconfont.wxss";
page {
  background-color: #fff !important;
}
.routeplan-transit-container {
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
}
.routeplan-bg-blue,
.routeplan-bg-cyan {
  color: #fff;
  background-color: #427cff;
}
.routeplan-icon-blue,
.routeplan-icon-cyan {
  width: 20px;
  height: 20px;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  border-radius: 20px;
  color: #fff;
  background-color: #427cff;
}
.routeplan-icon-circle {
  width: 4px;
  height: 4px;
  border-radius: 4px;
  border: 2px solid #427cff;
  background-color: #fff;
}
.routeplan-des-text {
  color: #888;
  font-size: 14px;
  line-height: 18px;
}
.routeplan-right-gap-line {
  margin: 0 4px;
}
.routeplan-base-icon {
  margin-right: 1px;
  display: inline-block;
  height: 20px;
  width: 20px;
}
.routeplan-expand-icon {
  display: inline-block;
  width: 6px;
  height: 10px;
  margin-left: 8px;
}
.routeplan-icon-followme {
  display: inline-block;
  width: 16px;
  height: 16px;
}
.routeplan-flex-row {
  display: -webkit-flex;
  display: flex;
}
.routeplan-flex-align-center,
.routeplan-flex-row {
  flex-direction: row;
  align-items: center;
}
.routeplan-flex-align-center {
  display: -webkit-inline-flex;
  display: inline-flex;
}
.routeplan-col-gap-24 {
  margin-top: 24px;
  margin-bottom: 24px;
}
.routeplan-col-gap-14 {
  margin-top: 14px;
  margin-bottom: 14px;
}
.routeplan-col-gap-12 {
  margin-top: 12px;
  margin-bottom: 12px;
}
.routeplan-mt-24 {
  margin-top: 24px;
}
.routeplan-mt-14 {
  margin-top: 14px;
}
.routeplan-mt-12 {
  margin-top: 12px;
}
.routeplan-mt-10 {
  margin-top: 10px;
}
.routeplan-transit-detail {
  flex-direction: column;
  font-size: 12px;
}
.routeplan-transit-detail,
.routeplan-transit-mapView {
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
}
.routeplan-transit-mapView {
  flex: 1;
  flex-direction: column;
}
.routeplan-map-container {
  flex: 1;
}
.routeplan-dashed-line {
  top: 30px;
  border-left: 2px dotted #d3d3d3;
}
.routeplan-dashed-line,
.routeplan-solid-line {
  position: absolute;
  left: 19px;
  bottom: 4px;
  z-index: -1;
  width: 0;
}
.routeplan-solid-line {
  top: 0;
}
.routeplan-icon-end {
  height: 34px;
  width: 28px;
}
.routeplan-icon-start {
  width: 28px;
  height: 28px;
  text-align: center;
  line-height: 28px;
  border-radius: 28px;
  font-size: 14px;
  color: #fff;
  background-color: #40c063;
}
.routeplan-transit-box {
  position: relative;
}
.routeplan-title-item {
  min-height: 22px;
  align-items: center;
  padding: 0 6px;
  font-size: 16px;
  color: #333;
}
.routeplan-title-item,
.routeplan-title-item .routeplan-icon-box {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
}
.routeplan-title-item .routeplan-icon-box {
  justify-content: center;
  margin-right: 6px;
  width: 28px;
}
.routeplan-title-item.routeplan-transit-title {
  color: #333;
  border-radius: 3px;
  font-size: 14px;
  padding: 0 8px;
  line-height: 20px;
  border: 1px solid;
}
.routeplan-title-item.routeplan-station-title {
  font-size: 16px;
}
.routeplan-title-item.routeplan-circle-title {
  margin-left: -40px;
}
.routeplan-station-expand-btn {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 20px;
  line-height: 20px;
  color: #333;
}
.routeplan-station-start-end-time {
  color: #333;
}
.routeplan-transit-box-panel {
  box-sizing: border-box;
  padding: 10px 0;
  border-radius: 5px;
  margin-left: 40px;
  font-size: 14px;
}
.routeplan-common-widget {
  margin-left: 40px;
  padding: 12px 0;
}
.routeplan-line-detail-control {
  box-sizing: border-box;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}
.routeplan-detail-container {
  box-sizing: border-box;
  flex: 1;
  padding: 0 20px;
  overflow: hidden;
}
.routeplan-detail-scroll {
  box-sizing: border-box;
  width: 100%;
  border-top: 1px solid #e5e5e5;
  padding: 0 0 0 17px;
}
.routeplan-line-detail {
  position: relative;
  padding: 30px 0 0;
}
.routeplan-line-detail .routeplan-walk-btn {
  color: #3e3e3e;
}
.routeplan-transit-sit-item {
  padding-bottom: 8px;
  margin-left: 12px;
}
.routeplan-map-swiper {
  width: 100%;
  position: relative;
  background: #fff;
}
.routeplan-transit-swiper {
  padding: 15px 20px 2px;
}
.routeplan-bus-title {
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  color: #333;
  font-size: 16px;
  margin-bottom: 6px;
}
.routeplan-vehicle-icon {
  transform: translateY(4px);
  margin-right: 1px;
  display: inline-block;
  height: 20px;
  width: 20px;
}
.routeplan-vehicle {
  padding: 2px 10px;
  margin: 3px 0;
  border-radius: 12px;
  color: #fff;
  font-size: 14px;
}
.routeplan-bottom-panel {
  width: 100%;
  border-top: 1px solid #e5e5e5;
  background-color: #fff;
  color: #666;
}
.routeplan-bottom-button {
  width: 100%;
  height: 100%;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.routeplan-ic-walk {
  width: 18px;
  height: 18px;
}
.routeplan-logo-content {
  height: 34px;
  font-size: 12px;
  color: #a8a8a8;
  letter-spacing: 0;
  text-align: center;
  margin: 20px 0 0;
}
.routeplan-tencent-map-logo {
  width: 18px;
  height: 18px;
  vertical-align: top;
  margin-right: 6px;
}
.rtbus-container {
  margin-top: 10px;
  margin-bottom: 10px;
  padding-left: 10px;
  font-size: 14px;
  line-height: 40px;
  background: #f0fbf7;
  border-radius: 4px;
}
.rtbus-container .rt-label {
  margin-right: 10px;
  color: #777;
}
.rtbus-container .rt-detail {
  padding-left: 15px;
  background: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal1@2x.png)
    no-repeat 0/12px 12px;
  color: #00bc7a;
  animation: rtanimation 3s step-start infinite;
}
@-webkit-keyframes rtanimation {
  0% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal3@2x.png);
  }
  33.3% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal1@2x.png);
  }
  66.7% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal2@2x.png);
  }
  100% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal3@2x.png);
  }
}
@keyframes rtanimation {
  0% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal3@2x.png);
  }
  33.3% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal1@2x.png);
  }
  66.7% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal2@2x.png);
  }
  100% {
    background-image: url(https://mapapi.qq.com/web/miniprogram/routeplan/iconSignal3@2x.png);
  }
}
