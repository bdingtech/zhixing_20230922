@charset "UTF-8";
page {
  background: #296ef2;
}
.cont {
  flex: 1;
}
.wrap {
  padding: 20rpx 20rpx 40rpx;
  position: relative;
  z-index: 5;
}
.tick-box {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  padding-bottom: 24rpx;
  width: 710rpx;
}
.tick-box .swiper {
  background: #296ef2;
  height: 348rpx;
}
.tick-box .slide-image {
  border-radius: 24rpx 24rpx 0 0;
  display: block;
  height: 348rpx;
  width: 710rpx;
}
.tick-hd {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin: 30rpx 30rpx 0;
}
.tick-hd .tit {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.tick-hd .name {
  display: inline-block;
  margin-top: -4rpx;
  max-width: 440rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  vertical-align: middle;
  white-space: nowrap;
}
.tick-hd .txt {
  color: #666;
  font-size: 26rpx;
  line-height: 36rpx;
  margin-top: 2rpx;
}
.tick-hd .status {
  line-height: 34rpx;
  margin-top: 12rpx;
}
.tick-hd .status view {
  display: inline-block;
  font-size: 22rpx;
  margin-right: 10rpx;
  padding-right: 12rpx;
  position: relative;
}
.tick-hd .status view::after {
  background: #eee;
  content: "";
  height: 22rpx;
  position: absolute;
  right: 0;
  top: 6rpx;
  width: 2rpx;
}
.tick-hd .status view:last-child::after {
  display: none;
}
.tick-hd .grade {
  color: #ff7d00;
}
.tick-hd .iconfont {
  font-size: 20rpx;
  margin: -4rpx 4rpx 0 0;
}
.tick-hd .t {
  margin-left: 8rpx;
}
.tick-hd .tgrey {
  color: #666;
}
.tick-hd .btn-go {
  background: -webkit-linear-gradient(top left, #ff797c, #ff2e29);
  border-radius: 64rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  height: 64rpx;
  line-height: 64rpx;
  margin-left: 30rpx;
  padding: 0;
  width: 142rpx;
}
.tick-bd {
  margin: 0 30rpx;
}
.tick-bd .item {
  -ms-flex-align: center;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 24rpx;
  padding: 20rpx 60rpx 20rpx 24rpx;
  position: relative;
}
.tick-bd .tag {
  background: -webkit-linear-gradient(top left, #ff797c, #ff2e29);
  border-radius: 0 12rpx;
  color: #fff;
  font-size: 20rpx;
  line-height: 32rpx;
  padding: 0 6rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.tick-bd .cont {
  color: #666;
  font-size: 30rpx;
  margin-right: 30rpx;
}
.tick-bd .s {
  color: #999;
  font-size: 24rpx;
  margin-top: 4rpx;
  text-decoration: line-through;
}
.tick-bd .price {
  color: #ff332e;
  font-size: 36rpx;
  font-weight: 600;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 10rpx;
  overflow: hidden;
}
.tick-bd .price::before {
  content: "¥";
  font-size: 22rpx;
}
.tick-bd .price::after {
  content: "起";
  font-size: 22rpx;
  font-weight: 400;
  margin-left: 2rpx;
}
.tick-more {
  color: #666;
  font-size: 24rpx;
  margin-top: 24rpx;
  text-align: center;
}
.tick-more .ifont-arr {
  font-size: 18rpx;
  font-weight: 400;
  margin: -4rpx 0 0 4rpx;
  transform: rotate(90deg);
}
.ticket-load-all {
  -ms-flex-pack: center;
  color: #fff;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 24rpx;
  justify-content: center;
}
