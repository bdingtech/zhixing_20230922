@import "/pages/trainDetail/sub-vendors.wxss";
.train-detail-ticket-qrcode {
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
}
.train-detail-ticket-qrcode-content {
  margin: 24rpx 16rpx 0;
}
.train-detail-ticket-qrcode-content .top-bg {
  height: 112rpx;
  width: 100%;
}
.train-detail-ticket-qrcode-content .content {
  background: #fff;
  box-sizing: border-box;
  height: 100%;
  margin: -10rpx 24rpx 0;
  padding-bottom: 40rpx;
}
.train-detail-ticket-qrcode-content .pas {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 16rpx;
  position: relative;
  width: 100%;
}
.train-detail-ticket-qrcode-content .how-check {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  margin-right: 40rpx;
  position: absolute;
  right: 0;
  top: 10%;
}
.train-detail-ticket-qrcode-content .how-check .ifont2-zhushi_linea_12 {
  color: #ccc;
  font-size: 26rpx;
  margin-top: 2rpx;
}
.train-detail-ticket-qrcode-content .pas-type {
  border-radius: 6rpx;
  color: #198cff;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  font-weight: 400;
  height: 32rpx;
  margin-left: 12rpx;
  position: relative;
  width: 72rpx;
  z-index: 1;
}
.train-detail-ticket-qrcode-content .pas-type::after {
  border: 2rpx solid #198cff;
  border-radius: 12rpx;
  box-sizing: border-box;
  content: "";
  height: 200%;
  left: -50%;
  position: absolute;
  top: -50%;
  transform: scale(0.49);
  transform-origin: center;
  width: 200%;
  z-index: -1;
}
.train-detail-ticket-qrcode-content .txt {
  color: #333;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 24rpx;
}
.train-detail-ticket-qrcode-content .desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  font-weight: 400;
  margin-top: 8rpx;
}
.train-detail-ticket-qrcode-content .code-tips {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
}
.train-detail-ticket-qrcode-content .tit {
  background: #03b86f;
  border-radius: 6rpx;
  color: #fff;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  font-weight: 400;
  height: 32rpx;
  margin-right: 6rpx;
  width: 92rpx;
}
.train-detail-ticket-qrcode-content .refresh-content {
  color: #1a8cff;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 30rpx;
}
.train-detail-ticket-qrcode-content .refresh-icon {
  height: 40rpx;
  margin-left: 12rpx;
  width: 40rpx;
}
.train-detail-ticket-qrcode-content .qrcode-content {
  margin: 10rpx 0;
}
.train-detail-ticket-qrcode-content .qrcode-content .no-data-img {
  height: 440rpx;
  width: 440rpx;
}
.detail-qrcode-ticket-info {
  background: #fff;
  border-radius: 0 0 20rpx 20rpx;
  margin: 0 40rpx;
  overflow: hidden;
}
.detail-qrcode-ticket-info .split-dash-line {
  border-top: 4rpx dashed #198cff;
  margin: 0 40rpx 60rpx;
  transform: scaleY(0.2);
}
.detail-qrcode-ticket-info .ticket-content {
  -ms-flex-pack: distribute;
  justify-content: space-around;
  margin: 0 70rpx;
}
.detail-qrcode-ticket-info .ticket-content .item {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
}
.detail-qrcode-ticket-info .ticket-content .item .name {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  font-weight: 400;
  margin-bottom: 12rpx;
}
.detail-qrcode-ticket-info .seat-content {
  -ms-flex-pack: distribute;
  justify-content: space-around;
  margin: 40rpx;
}
.detail-qrcode-ticket-info .seat-content .item {
  background: #f4fafe;
  border-radius: 16rpx;
  color: #3c5a86;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  font-weight: 500;
  height: 124rpx;
  width: 190rpx;
}
.detail-qrcode-ticket-info .seat-content .item .name {
  color: #3c5a86;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
}
.train-check-ticket-caption-toast .check-title {
  margin-top: -30rpx;
}
.train-check-ticket-caption-toast .check-content {
  color: #666;
  margin: 10rpx 0;
  width: 100%;
}
.train-check-ticket-caption-toast .check-content .img {
  height: 390rpx;
  margin-bottom: 24rpx;
  width: 100%;
}
.train-check-ticket-caption-toast .check-content .item {
  text-align: left;
}
