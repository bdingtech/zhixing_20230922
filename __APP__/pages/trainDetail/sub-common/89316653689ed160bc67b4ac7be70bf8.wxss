.train-product-drawer {
  position: relative;
}
.train-product-drawer .zt-drawer {
  background: #f5f5f5;
  border-radius: 40rpx 40rpx 0 0;
}
.train-product-drawer .zt-drawer .zt-drawer-content {
  padding-top: 32rpx;
}
.train-product-drawer .close-icon {
  height: 48rpx;
  position: absolute;
  right: 32rpx;
  top: 30rpx;
  width: 48rpx;
}
.train-product-drawer .tit {
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  font-weight: 500;
  height: 42rpx;
  letter-spacing: 0;
  line-height: 42rpx;
  text-align: center;
}
.train-product-drawer .cont-box {
  background: #fff;
  border-radius: 24rpx;
  color: #999;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin: 34rpx 16rpx 32rpx;
  padding: 40rpx 32rpx;
}
.train-product-drawer .cont-box .scroll-cont {
  max-height: calc(80vh - 408rpx);
}
.train-product-drawer .c-btn-box {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
}
.train-product-drawer .c-btn-box .btn {
  background: #198cff;
  border-radius: 24rpx;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 34rpx;
  font-weight: 600;
  height: 88rpx;
  letter-spacing: 0;
  line-height: 88rpx;
}
