page {
  background: #fff;
}
.top {
  box-sizing: border-box;
  color: #fff;
  height: 380rpx;
  padding-top: 96rpx;
  position: relative;
  text-align: center;
}
.top.zx {
  background: -webkit-linear-gradient(top, #0066e6, #0080ff);
}
.top.ty {
  background: #3c4365;
}
.top::before {
  background: url(https://images3.c-ctrip.com/zt/train-service-notice/icon-wechat.png)
    no-repeat;
  background-size: cover;
  bottom: -12rpx;
  height: 202rpx;
  width: 242rpx;
}
.top::after,
.top::before {
  content: "";
  position: absolute;
  right: 0;
}
.top::after {
  background: url(https://images3.c-ctrip.com/zt/train-service-notice/mask.png)
    no-repeat;
  background-size: cover;
  bottom: 0;
  height: 32rpx;
  left: 0;
}
.top .tit {
  font-size: 48rpx;
  font-weight: 600;
  line-height: 56rpx;
  margin-bottom: 24rpx;
}
.top .txt {
  font-size: 26rpx;
  line-height: 34rpx;
  opacity: 0.8;
}
.top icon {
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 24rpx;
  bottom: -66rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  height: 140rpx;
  left: 50%;
  position: absolute;
  transform: translateX(-50%);
  width: 140rpx;
  z-index: 5;
}
.wrap {
  margin: 150rpx 60rpx 0;
}
.wrap .tit {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 50rpx;
  margin-bottom: 26rpx;
  text-align: center;
}
.wrap .tit::after,
.wrap .tit::before {
  content: "";
  display: inline-block;
  height: 4rpx;
  margin: -4rpx 20rpx 0;
  vertical-align: middle;
  width: 32rpx;
}
.wrap .tit::before {
  background: -webkit-linear-gradient(left, rgba(98, 98, 98, 0), #333);
}
.wrap .tit::after {
  background: -webkit-linear-gradient(left, #333, rgba(98, 98, 98, 0));
}
.wrap .txt {
  color: #666;
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 16rpx;
}
.wrap .btn-go,
.wrap .color-primary {
  font-weight: 600;
}
.wrap .btn-go {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  border-radius: 96rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  height: 96rpx;
  justify-content: center;
  line-height: 40rpx;
  margin-top: 74rpx;
}
.btn-txt {
  font-size: 24rpx;
  font-weight: 400;
}
