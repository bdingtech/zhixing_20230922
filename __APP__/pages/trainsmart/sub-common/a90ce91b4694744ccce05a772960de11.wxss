.smart-pr-banner {
  -ms-flex-pack: justify;
  background: -webkit-gradient(
    linear,
    left top,
    right top,
    from(rgba(3, 184, 111, 0.1)),
    color-stop(99.99%, rgba(32, 221, 145, 0.05))
  );
  background: -webkit-linear-gradient(
    left,
    rgba(3, 184, 111, 0.1),
    rgba(32, 221, 145, 0.05) 99.99%
  );
  background: -o-linear-gradient(
    left,
    rgba(3, 184, 111, 0.1) 0,
    rgba(32, 221, 145, 0.05) 99.99%
  );
  background: linear-gradient(
    90deg,
    rgba(3, 184, 111, 0.1),
    rgba(32, 221, 145, 0.05) 99.99%
  );
  border-radius: 12rpx;
  height: 48rpx;
  justify-content: space-between;
  padding: 6rpx 16rpx 8rpx;
}
.smart-pr-banner .img {
  height: 28rpx;
  width: 90rpx;
}
.smart-pr-banner .tips-txt {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 34rpx;
  margin-left: 12rpx;
}
