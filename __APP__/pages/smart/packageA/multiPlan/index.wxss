.smart-multi-plan {
  overflow: hidden;
  position: relative;
  z-index: 0;
}
.smart-multi-plan::before {
  content: "";
  height: 80rpx;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  z-index: -1;
}
