@import "/pages/bus/sub-vendors.wxss";
.bus-map-tab {
  background: #fff;
  border-radius: 40rpx;
  box-shadow: 0 0 20rpx 0 rgba(51, 51, 51, 0.06);
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  width: 392rpx;
}
.bus-map-tab .bus-tab-item {
  color: #666;
  flex: 1;
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 80rpx;
  text-align: center;
  transition: color 0.5s ease;
  width: 392rpx;
  z-index: 1;
}
.bus-map-tab .bus-tab-item.active {
  color: #fff;
}
.bus-map-tab .bus-tab-active-bg {
  background-color: #198cff;
  border-radius: 36rpx;
  height: 72rpx;
  left: 4rpx;
  margin-top: -36rpx;
  position: absolute;
  top: 50%;
  transition: -webkit-transform 0.5s ease;
  transition: transform 0.5s ease;
  transition: transform 0.5s ease, -webkit-transform 0.5s ease;
  width: calc(50% - 4rpx);
  z-index: 0;
}
.bus-map-tab.ty .bus-tab-active-bg {
  background-color: #3c4365;
}
.bus-map-page {
  left: 0;
  position: absolute;
  top: 0;
}
.bus-map-page,
.bus-map-page .map-content {
  height: 100%;
  width: 100%;
}
.bus-map-page .bottom-content {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  bottom: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
  left: 0;
  min-height: 100rpx;
  padding: 30rpx 30rpx calc(30rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
}
.bus-map-page .bottom-content .bl {
  flex: 1;
  margin-right: 40rpx;
  white-space: pre-wrap;
}
.bus-map-page .bottom-content .bl .title {
  color: #222;
  font-family: PingFangSC-Medium;
  font-size: 42.6rpx;
  font-weight: 500;
  letter-spacing: 0;
  line-height: 60rpx;
}
.bus-map-page .bottom-content .bl .desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  letter-spacing: 0;
  line-height: 32rpx;
}
.bus-map-page .bottom-content .br {
  border-radius: 50%;
  height: 100rpx;
  width: 100rpx;
}
.bus-map-page .bottom-content .bus-map-tab {
  bottom: calc(100% + 50rpx);
  position: absolute;
}
.bus-map-page .back-btn-content {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  border-radius: 16rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 60rpx;
  justify-content: center;
  left: 32rpx;
  position: fixed;
  width: 60rpx;
  z-index: 1;
}
.bus-map-page .back-btn-content .back-icon {
  height: 100%;
  width: 100%;
}
.bus-map-page .back-btn-content .back-icon:active {
  opacity: 0.5;
}
.bus-map-page .empty-page {
  height: calc(100% - 160rpx - env(safe-area-inset-bottom));
  width: 100%;
}
.bus-map-page .empty-page,
.bus-map-page .empty-page .empty-content {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: center;
}
.bus-map-page .empty-page .empty-content {
  flex-direction: column;
}
.bus-map-page .empty-page .empty-content .sorry-image {
  height: 169.44rpx;
  margin-bottom: 26rpx;
  width: 270.64rpx;
}
.bus-map-page .empty-page .empty-content .sorry-title {
  color: #222;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44rpx;
  margin-bottom: 6rpx;
}
.bus-map-page .empty-page .empty-content .sorry-desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 36rpx;
}
