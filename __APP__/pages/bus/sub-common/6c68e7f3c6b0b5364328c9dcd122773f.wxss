  background: url(https://pages.c-ctrip.com/bus-images/zhixing/Popup/xfbrk@3x.png)
    no-repeat 0 0;
  background-size: 100% 100%;
  bottom: -18rpx;
  content: "";
  left: -22rpx;
  position: absolute;
  right: -12rpx;
  top: -10rpx;
  z-index: -1;
}
.bus-coupon-tip.cashback1stOrder .coupon-tip_down {
  bottom: 13rpx;
