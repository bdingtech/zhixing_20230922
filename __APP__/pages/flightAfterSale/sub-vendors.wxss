.rebook-detail {
  background: #fff;
  border-radius: 24rpx;
  margin: 16rpx;
  padding: 28rpx 32rpx 32rpx 20rpx;
  position: relative;
  z-index: 0;
}
.rebook-detail::before {
  background: -webkit-gradient(
    linear,
    left top,
    left bottom,
    from(#ddebff),
    to(#fff)
  );
  background: -webkit-linear-gradient(top, #ddebff, #fff);
  background: -o-linear-gradient(top, #ddebff 0, #fff 100%);
  background: linear-gradient(-180deg, #ddebff, #fff);
  border-radius: 24rpx 24rpx 0 0;
  content: "";
  height: 180rpx;
  left: 4rpx;
  position: absolute;
  right: 4rpx;
  top: 4rpx;
}
.rebook-detail .rt-tip {
  color: #3c5a86;
}
.rebook-detail .divider {
  padding: 36rpx 0 36rpx 16rpx;
  position: relative;
}
.rebook-detail .divider .line {
  border-top: 2rpx dashed #000;
  display: block;
  height: 0;
  opacity: 6%;
  width: 100%;
}
.rebook-detail .divider::after,
.rebook-detail .divider::before {
  background: #f5f5f5;
  border-radius: 50%;
  content: "";
  display: inline-block;
  height: 28rpx;
  position: absolute;
  top: 50%;
  width: 28rpx;
  z-index: 1;
}
.rebook-detail .divider::before {
  left: 0;
  transform: translate3d(calc(-100% - 6rpx), -50%, 0);
}
.rebook-detail .divider::after {
  right: 0;
  transform: translate3d(calc(50% + 32rpx), -50%, 0);
}
