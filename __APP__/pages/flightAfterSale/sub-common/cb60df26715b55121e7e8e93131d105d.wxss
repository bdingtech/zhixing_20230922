.train-tip-list .tip-item {
  line-height: 34rpx;
  margin-bottom: 8rpx;
  vertical-align: middle;
}
.train-tip-list .tip-item:last-child {
  margin-bottom: 0;
}
.train-tip-list .tip-item .dot {
  height: 34rpx;
  margin-right: 12rpx;
}
.train-tip-list .tip-item .dot::after {
  background: #d8d8d8;
  border-radius: 50%;
  content: "";
  height: 10rpx;
  width: 10rpx;
}
.train-tip-list .tip-item .tip {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
}
