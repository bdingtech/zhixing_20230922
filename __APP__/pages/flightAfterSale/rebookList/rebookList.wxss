.flt-calendar {
  width: 100vw;
}
.flt-calendar .calendar-list-wrapper {
  margin-left: 16rpx;
  min-width: 2rpx;
}
.flt-calendar .calendar-list {
  height: 88rpx;
  overflow: hidden;
  white-space: nowrap;
}
.flt-calendar .calendar-list .item {
  box-sizing: border-box;
  color: #222;
  display: inline-block;
  margin-right: 10rpx;
  padding: 16rpx 0 12rpx;
  text-align: center;
  width: 136rpx;
}
.flt-calendar .calendar-list .item.cur {
  background: #198cff;
  border-radius: 20rpx;
  color: #fff;
}
.flt-calendar .calendar-list .title {
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  font-weight: 400;
  height: 24rpx;
  line-height: 24rpx;
}
.flt-calendar .calendar-list .sub-title {
  font-family: ZX-Regular;
  font-size: 28rpx;
  font-weight: 400;
  height: 28rpx;
  line-height: 28rpx;
  margin-top: 4rpx;
}
.flt-calendar .calendar-list .sub-title.show-price {
  margin-top: 6rpx;
}
.flt-calendar .calendar-all {
  height: 88rpx;
  position: relative;
  width: 104rpx;
}
.flt-calendar .calendar-all::before {
  background: url(https://images3.c-ctrip.com/ztrip/train.song/order_details/V10.0/lby/img_mc@3x.webp)
    no-repeat 50% / cover;
  content: "";
  height: 88rpx;
  left: -30rpx;
  position: absolute;
  width: 30rpx;
}
.flt-calendar .ifont2-calendar {
  color: #222;
  font-size: 48rpx;
}
.flt-calendar .rest-icon {
  border: 2rpx solid #222;
  border-radius: 16rpx;
  color: #222;
  display: block;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  font-weight: 500;
  height: 44rpx;
  line-height: 44rpx;
  margin: 0-6rpx 0-4rpx;
  transform: scale(0.5);
  transform-origin: center;
  width: 44rpx;
}
.flt-calendar .rest-icon.cur {
  border: 2rpx solid #fff;
  color: #fff;
}
.flt-change-list {
  min-height: 2rpx;
}
.flt-change-list .list-cont {
  padding-bottom: calc(228rpx + env(safe-area-inset-bottom));
}
.flt-change-list .color-blue {
  color: #198cff !important;
}
.flt-change-list .top-tip {
  background: -webkit-gradient(
    linear,
    left top,
    right top,
    from(rgba(111, 147, 187, 0.1)),
    to(rgba(111, 147, 187, 0.05))
  );
  background: -webkit-linear-gradient(
    left,
    rgba(111, 147, 187, 0.1),
    rgba(111, 147, 187, 0.05)
  );
  background: -o-linear-gradient(
    left,
    rgba(111, 147, 187, 0.1) 0,
    rgba(111, 147, 187, 0.05) 100%
  );
  background: linear-gradient(
    90deg,
    rgba(111, 147, 187, 0.1),
    rgba(111, 147, 187, 0.05)
  );
  border-radius: 20rpx;
  color: #3c5a86;
  font-weight: 500;
  margin: 8rpx 12rpx 12rpx;
  padding: 18rpx 32rpx;
}
.flt-change-list .ifont-detail {
  font-size: 20rpx;
  margin: -2rpx 0 0 6rpx;
}
.flt-change-list .rebook-tips {
