@import "/pages/flightAfterSale/sub-vendors.wxss";
.rebook-segment {
  background: #fff;
  border-radius: 24rpx;
  margin: 16rpx;
  padding: 26rpx 32rpx 32rpx;
}
.rebook-segment .segment-tag {
  background: #198cff;
  border-radius: 12rpx;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  font-weight: 500;
  height: 32rpx;
  line-height: 32rpx;
  margin-right: 12rpx;
  padding: 0 12rpx;
}
.rebook-segment .bd {
  background: #f7f7f7;
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 24rpx;
}
.rebook-segment .pas-item {
  margin-bottom: 32rpx;
}
.rebook-segment .pas-item:last-child {
  margin-bottom: 0;
}
.rebook-segment .reason {
  font-family: PingFangSC-Medium;
  font-weight: 500;
  line-height: 36rpx;
}
.rebook-segment .ticket-tag {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 18rpx;
  font-weight: 400;
  height: 32rpx;
  line-height: 32rpx;
  margin-left: 8rpx;
  padding: 0 8rpx;
}
.rebook-segment .ticket-tag::after {
  border-color: #ccc;
  border-radius: 16rpx;
}
.rebook-segment .botm {
  margin-top: 24rpx;
}
.rebook-segment .rebook-btn {
  background: #198cff;
  border-radius: 18rpx;
  color: #fff;
  font-family: PingFangSC-Semibold;
  font-size: 28rpx;
  font-weight: 600;
  height: 68rpx;
  margin-right: 0;
  width: 152rpx;
}
.rebook-segment .tip-tag {
  color: #fd8700;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  font-weight: 400;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 8rpx;
  padding: 0 6rpx;
  position: relative;
  z-index: 1;
}
.rebook-segment .tip-tag::after {
  border: 2rpx solid #fecf99;
  border-radius: 16rpx;
  box-sizing: border-box;
  content: "";
  height: 200%;
  left: -50%;
  position: absolute;
  top: -50%;
  transform: scale(0.49);
  transform-origin: center;
  width: 200%;
  z-index: -1;
}
.flight-rebook-operate .tip {
  background: #fffaf5;
  color: #fd8700;
}
.flight-rebook-operate .fixed-top-tip {
  padding: 20rpx 32rpx;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 1;
}
.flight-rebook-operate .botm-tip {
  border-radius: 24rpx;
  margin: 16rpx;
  padding: 24rpx 32rpx;
}
