@charset "UTF-8";
@import "/pages/train/sub-vendors.wxss";
.cont {
  flex: 1;
}
.top-box {
  padding: 16rpx 40rpx 284rpx;
  position: relative;
}
.top-box::after {
  background: url(https://pic.c-ctrip.com/train/zt/wechat/arc-mask.png)
    no-repeat;
  background-size: cover;
  bottom: 0;
  content: "";
  height: 80rpx;
  left: 0;
  position: absolute;
  width: 750rpx;
}
.top-box.zx {
  background: -webkit-gradient(
    linear,
    left top,
    left bottom,
    from(#0066e6),
    to(#0080ff)
  );
  background: -webkit-linear-gradient(top, #0066e6, #0080ff);
  background: -o-linear-gradient(top, #0066e6, #0080ff);
  background: linear-gradient(180deg, #0066e6, #0080ff);
}
.top-box.ty {
  background: #3c4365;
}
.top-box .txt {
  color: #fff;
  font-size: 28rpx;
}
.wrap {
  margin-top: -260rpx;
  padding-bottom: calc(170rpx + env(safe-area-inset-bottom));
  z-index: 2;
}
.white-box,
.wrap {
  position: relative;
}
.white-box {
  background: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
}
.refund-comm {
  padding: 26rpx 30rpx 30rpx;
}
.refund-comm::after {
  background-repeat: no-repeat;
  background-size: cover;
  content: "";
  height: 160rpx;
  position: absolute;
  right: 0;
  top: 12rpx;
  width: 154rpx;
}
.refund-comm.zx::after {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/comm-zx.png);
}
.refund-comm.zx .refund-comm-hd .tit {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/comm-tit-zx.png);
}
.refund-comm.zx .tag-list .item {
  color: #0080ff;
}
.refund-comm.zx .tag-list .item::after {
  border: 1rpx solid #0080ff;
}
.refund-comm.zx .refund-comm-upload .pic-box {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/upload-bg-zx.png);
}
.refund-comm.ty::after {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/comm-ty.png);
}
.refund-comm.ty .refund-comm-hd .tit {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/comm-tit-ty.png);
}
.refund-comm.ty .tag-list .item {
  color: #34bf46;
}
.refund-comm.ty .tag-list .item::after {
  border: 1rpx solid #34bf46;
}
.refund-comm.ty .refund-comm-upload .pic-box {
  background-image: url(https://pic.c-ctrip.com/train/zt/wechat/refund/upload-bg-ty.png);
}
.refund-comm-hd {
  border-bottom: 1rpx solid #ebebeb;
  padding-bottom: 30rpx;
}
.refund-comm-hd .tit {
  background-repeat: no-repeat;
  background-size: cover;
  height: 38rpx;
  width: 228rpx;
}
.refund-comm-hd .tag-list {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  margin-top: 16rpx;
}
.refund-comm-hd .tag-list .item {
  font-size: 20rpx;
  line-height: 30rpx;
  margin-right: 6rpx;
  padding: 0 6rpx;
  position: relative;
}
.refund-comm-hd .tag-list .item::after {
  border-radius: 12rpx;
  box-sizing: border-box;
  content: "";
  height: 199.9%;
  left: 0;
  position: absolute;
  top: 0;
  transform: scale(0.5);
  transform-origin: left top;
  width: 199.9%;
}
.refund-comm-hd .txt {
  color: #666;
  font-size: 26rpx;
  margin-top: 10rpx;
}
.refund-comm-upload {
  -ms-flex-pack: justify;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  margin-top: 30rpx;
}
.refund-comm-upload .tit {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  width: 100%;
}
.refund-comm-upload .item {
  text-align: center;
  width: 314rpx;
}
.refund-comm-upload .pic-box {
  background-repeat: no-repeat;
  background-size: cover;
  box-sizing: border-box;
  height: 220rpx;
  padding: 32rpx 28rpx;
  width: 314rpx;
}
.refund-comm-upload .img {
  height: 156rpx;
  width: 100%;
}
.refund-comm-upload .txt {
  color: #999;
  font-size: 24rpx;
  margin-top: 16rpx;
}
.refund-comm-detail {
  margin-top: 50rpx;
}
.refund-comm-detail .tit {
  font-size: 34rpx;
  font-weight: 700;
}
.refund-comm-detail-info {
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 24rpx;
}
.refund-comm-detail-info .item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 16rpx;
}
.refund-comm-detail-info .txt {
  color: #666;
  font-size: 26rpx;
}
.refund-comm-detail-info .price {
  font-size: 26rpx;
}
.refund-comm-detail-info .tgrey {
  color: #999;
  font-size: 22rpx;
}
.refund-comm-detail-info .total {
  border-top: 1rpx solid #ebebeb;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 24rpx;
  padding-top: 24rpx;
}
.refund-comm-detail-info .total .price {
  font-weight: 700;
}
.refund-comm-detail-info .tag {
  font-size: 20rpx;
  line-height: 30rpx;
  margin-left: 8rpx;
  padding: 2rpx 6rpx;
  position: relative;
}
.refund-comm-detail-info .tag::after {
  border-radius: 12rpx;
  box-sizing: border-box;
  content: "";
  height: 199.9%;
  left: 0;
  position: absolute;
  top: 0;
  transform: scale(0.5);
  transform-origin: left top;
  width: 199.9%;
}
.refund-comm-detail-info .tag.zx {
  color: #0080ff;
}
.refund-comm-detail-info .tag.zx::after {
  border: 1rpx solid #0080ff;
}
.refund-comm-detail-info .tag.ty {
  color: #34bf46;
}
.refund-comm-detail-info .tag.ty::after {
  border: 1rpx solid #34bf46;
}
.info-txt {
  color: #999;
  font-size: 24rpx;
  margin: 24rpx 30rpx 0;
}
.fixed-botm {
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  bottom: 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  left: 0;
  padding: 20rpx 20rpx calc(20rpx + env(safe-area-inset-bottom)) 30rpx;
  position: fixed;
  right: 0;
  z-index: 100;
}
.fixed-botm .cont {
  color: #666;
  font-size: 28rpx;
}
.fixed-botm .price {
  font-size: 48rpx;
  font-weight: 700;
}
.fixed-botm .price::before {
  content: "Â¥";
  font-size: 28rpx;
  margin: 0 2rpx -12rpx;
}
.fixed-botm .btn-submit {
  border-radius: 88rpx;
  font-size: 26rpx;
  font-weight: 700;
  height: 88rpx;
  line-height: 88rpx;
  width: 356rpx;
}
.pop-mid {
  box-sizing: border-box;
  left: 50%;
  position: fixed;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
}
.pop-modal {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  width: 600rpx;
}
.pop-modal .tit {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
}
.pop-modal .txt {
  color: #666;
  font-size: 28rpx;
  margin: 30rpx 10rpx 0;
  text-align: center;
}
.pop-modal .tips {
  background: #fff8ed;
  border-radius: 12rpx;
  color: #f76e21;
  font-size: 24rpx;
  margin-top: 20rpx;
  padding: 12rpx 20rpx;
}
.pop-btn {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 30rpx;
}
.pop-btn .h5-button {
  border-radius: 88rpx;
  flex: 1;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-right: 20rpx;
}
.pop-btn .h5-button:last-child {
  margin-right: 0;
}
.pop-btn .btn-cancel {
  background: #f5f5f5;
  color: #666;
}
.pop-btn .btn-submit {
  font-weight: 700;
}
