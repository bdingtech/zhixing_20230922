@import "/pages/train/sub-vendors.wxss";
.cont {
  flex: 1;
}
.top-box {
  padding: 20rpx 40rpx 230rpx;
  position: relative;
}
.top-box::after {
  background: url(https://pic.c-ctrip.com/train/zt/wechat/arc-mask.png)
    no-repeat;
  background-size: cover;
  bottom: 0;
  content: "";
  height: 80rpx;
  left: 0;
  position: absolute;
  width: 750rpx;
}
.top-box.zx {
  background: -webkit-gradient(
    linear,
    left top,
    left bottom,
    from(#0066e6),
    to(#0080ff)
  );
  background: -webkit-linear-gradient(top, #0066e6, #0080ff);
  background: -o-linear-gradient(top, #0066e6, #0080ff);
  background: linear-gradient(180deg, #0066e6, #0080ff);
}
.top-box.ty {
  background: #3c4365;
}
.top-box .tit {
  -ms-flex-pack: center;
  color: #fff;
  font-size: 44rpx;
  font-weight: 700;
  justify-content: center;
}
.top-box .status-icon,
.top-box .tit {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
}
.top-box .status-icon {
  height: 44rpx;
  margin-right: 5rpx;
  width: 44rpx;
}
.top-box .txt {
  color: #fff;
  font-size: 26rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}
.top-box .iconfont {
  font-size: 48rpx;
  font-weight: 400;
  margin-right: 8rpx;
}
.wrap {
  margin-top: -206rpx;
  padding-bottom: calc(170rpx + env(safe-area-inset-bottom));
  z-index: 2;
}
.white-box,
.wrap {
  position: relative;
}
.white-box {
  background: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
}
.refund-info,
.refund-tips {
  padding: 30rpx;
}
.refund-info .tit,
.refund-tips .tit {
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 40rpx;
}
.refund-info .tit:first-child,
.refund-tips .tit:first-child {
  margin-top: 0;
}
.past-list {
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 24rpx;
}
.past-list .item {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 20rpx;
}
.past-list .item:last-child {
  margin-bottom: 0;
}
.past-list .name {
  font-size: 28rpx;
  font-weight: 700;
  margin-right: 20rpx;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.past-list .cont {
  color: #999;
  font-size: 24rpx;
}
.detail-info {
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-top: 24rpx;
  padding: 24rpx;
}
.detail-info .item {
  margin-bottom: 16rpx;
}
.detail-info .item,
.detail-info .txt {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.detail-info .txt {
  -ms-flex-align: center;
  align-items: center;
  color: #666;
  flex-flow: row wrap;
  font-size: 26rpx;
}
.detail-info .price {
  font-size: 26rpx;
}
.detail-info .tgrey {
  color: #999;
  font-size: 22rpx;
}
.detail-info .total {
  border-top: 1rpx solid #ebebeb;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-top: 24rpx;
  padding-top: 24rpx;
}
.detail-info .total .price {
  font-weight: 700;
}
.detail-info .tag {
  font-size: 20rpx;
  line-height: 30rpx;
  margin-left: 8rpx;
  padding: 0 6rpx;
  position: relative;
}
.detail-info .tag::after {
  border-radius: 12rpx;
  box-sizing: border-box;
  content: "";
  height: 199.9%;
  left: 0;
  position: absolute;
  top: 0;
  transform: scale(0.5);
  transform-origin: left top;
  width: 199.9%;
}
.detail-info .tag.zx {
  color: #0080ff;
}
.detail-info .tag.zx::after {
  border: 1rpx solid #0080ff;
}
.detail-info .tag.ty {
  color: #34bf46;
}
.detail-info .tag.ty::after {
  border: 1rpx solid #34bf46;
}
.refund-tips .txt {
  font-size: 28rpx;
  margin-top: 12rpx;
}
.info-txt {
  margin: 40rpx 30rpx 0;
}
.info-txt .tit {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 14rpx;
}
.info-txt .txt {
  color: #999;
  font-size: 24rpx;
  line-height: 36rpx;
  margin-bottom: 10rpx;
  padding-left: 24rpx;
  position: relative;
}
.info-txt .txt::before {
  background: #999;
  content: "";
  height: 8rpx;
  left: 0;
  position: absolute;
  top: 14rpx;
  width: 8rpx;
}
