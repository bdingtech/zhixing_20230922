@import "/pages/train/sub-vendors.wxss";
.cont {
  flex: 1;
}
.top-box {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 30rpx 30rpx 166rpx 40rpx;
  position: relative;
}
.top-box.zx {
  background: -webkit-linear-gradient(top, #0066e6, #0080ff);
}
.top-box.ty {
  background: #3c4365;
}
.top-box::after {
  background: url(https://pic.c-ctrip.com/train/zt/wechat/arc-mask.png)
    no-repeat;
  background-size: cover;
  bottom: 0;
  content: "";
  height: 80rpx;
  left: 0;
  position: absolute;
  width: 750rpx;
}
.top-box .lbox {
  margin-right: 20rpx;
  width: 104rpx;
}
.top-box .avatar {
  border-radius: 104rpx;
  height: 104rpx;
  width: 104rpx;
}
.top-box .tag {
  background: #fff;
  border-radius: 40rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  margin-top: -22rpx;
  position: relative;
  text-align: center;
  z-index: 2;
}
.top-box .cont {
  background: rgba(0, 0, 0, 0.08);
  border-radius: 0 16rpx 16rpx 16rpx;
  padding: 16rpx 24rpx;
  position: relative;
}
.top-box .cont::before {
  background: url(https://images3.c-ctrip.com/zt/activity/ztrip-train-12306/top-txt-arr.png)
    no-repeat;
  background-size: cover;
  content: "";
  height: 18rpx;
  left: -12rpx;
  position: absolute;
  top: 0;
  width: 12rpx;
}
.top-box .txt {
  color: #fff;
  font-size: 30rpx;
  line-height: 44rpx;
}
.wrap {
  margin-top: -136rpx;
  position: relative;
  z-index: 2;
}
.btn-linear {
  border-radius: 96rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 700;
  height: 96rpx;
  line-height: 96rpx;
}
.btn-linear.zx {
  background: -webkit-gradient(
    linear,
    left top,
    right top,
    from(#0af),
    to(#446bff)
  );
  background: -webkit-linear-gradient(left, #0af, #446bff);
  background: -o-linear-gradient(left, #0af, #446bff);
  background: linear-gradient(90deg, #0af, #446bff);
}
.btn-linear.zx[disabled] {
  background: #7fbfff;
  color: #fff;
}
.btn-linear.ty {
  background: -webkit-gradient(
    linear,
    left top,
    right top,
    from(#ff9166),
    to(#ff5959)
  );
  background: -webkit-linear-gradient(left, #ff9166, #ff5959);
  background: -o-linear-gradient(left, #ff9166, #ff5959);
  background: linear-gradient(90deg, #ff9166, #ff5959);
}
.btn-linear.ty[disabled] {
  background: #fdb6a8;
  box-shadow: none;
  color: #fff;
}
.white-box {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 20rpx 20rpx;
}
.order-box {
  -ms-flex-align: center;
  align-items: center;
  background-image: url(https://images3.c-ctrip.com/zt/activity/ztrip-train-12306/order-bg.png);
  background-position: 100%0;
  background-repeat: no-repeat;
  background-size: 116rpx 142rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 28rpx 40rpx;
}
.order-box .from,
.order-box .to {
  flex: 1;
}
.order-box .to {
  text-align: right;
}
.order-box .label {
  color: #999;
  font-size: 24rpx;
}
.order-box .station {
  font-size: 40rpx;
  font-weight: 700;
}
.order-box .mid {
  background: url(https://images3.c-ctrip.com/zt/activity/ztrip-train-12306/icon-fromto.png)
    7rpx 42rpx no-repeat;
  background-size: 146rpx 8rpx;
  text-align: center;
  width: 160rpx;
}
.order-box .txt {
  color: #666;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-bottom: 12rpx;
}
.order-box .txt:last-child {
  margin-bottom: 0;
}
.login-box,
.register-box,
.result-box {
  padding: 40rpx 40rpx 60rpx;
}
.login-hd .tit,
.register-hd .tit {
  font-size: 44rpx;
  font-weight: 700;
}
.login-hd .txt,
.register-hd .txt {
  color: #666;
  font-size: 26rpx;
  margin-top: 4rpx;
}
.input-bd {
  margin-top: 24rpx;
}
.input-bd .item {
  -ms-flex-align: center;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.input-bd .input-txt {
  background: transparent;
  font-size: 32rpx;
  font-weight: 700;
  height: 110rpx;
  width: 100%;
}
.input-bd .input-plc {
  color: #ccc;
  font-size: 32rpx;
  font-weight: 400;
}
.input-bd .ifont-eyeclosed {
  font-size: 32rpx;
}
.input-bd .btn-linear {
  margin-top: 40rpx;
}
.input-bd .btn-line {
  border-radius: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin-top: 30rpx;
}
.screen-box {
  padding: 60rpx 48rpx;
  text-align: center;
}
.screen-box .icon-screen {
  background-repeat: no-repeat;
  background-size: cover;
  display: block;
  height: 200rpx;
  margin: 0 auto;
  width: 200rpx;
}
.screen-box .icon-screen.zx {
  background-image: url(https://images3.c-ctrip.com/zt/activity/ztrip-train-12306/img-screen-zx.png);
}
.screen-box .icon-screen.ty {
  background-image: url(https://images3.c-ctrip.com/zt/activity/ztrip-train-12306/img-screen-ty.png);
}
.screen-box .tit {
  font-size: 44rpx;
  font-weight: 700;
  margin: 40rpx 10rpx 0;
}
.screen-box .txt {
  color: #666;
  font-size: 24rpx;
  margin: 10rpx 10rpx 0;
}
.screen-box .btn-linear {
  margin-top: 40rpx;
}
.register-bd {
  margin-top: 44rpx;
}
.register-bd .txt {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  margin-top: 40rpx;
}
.register-bd .txt:first-child {
  margin-top: 0;
}
.register-bd .no {
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 700;
  height: 36rpx;
  line-height: 36rpx;
  margin-right: 12rpx;
  text-align: center;
  width: 36rpx;
}
.register-bd .no.zx {
  background: #e8f3ff;
  color: #0080ff;
}
.register-bd .no.ty {
  background: #fef0ed;
  color: #fc6e51;
}
.register-bd .txt + .btn-linear {
  margin-top: 20rpx;
}
.result-bd {
  margin: 44rpx 0;
  text-align: center;
}
.result-bd .ifont-suc2 {
  font-size: 128rpx;
}
.result-bd .tit {
  color: #333;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 20rpx;
}
.result-bd .txt {
  color: #666;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.result-bd .btn {
  background-color: #fff;
  border: 2rpx solid #198cff;
  border-radius: 48rpx;
  color: #198cff;
  font-size: 32rpx;
  font-weight: 500;
  height: 96rpx;
  line-height: 96rpx;
  margin: 60rpx 16rpx 0;
  text-align: center;
}
.result-bd .btn.ty {
  border: 2rpx solid #fc6e51;
  color: #fc6e51;
}
.iconfont {
  padding: 20rpx;
}
