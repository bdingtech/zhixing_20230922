.train-bookx-hotel-cross-rule-pop {
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
}
.train-bookx-hotel-cross-rule-pop .cross-rule-content {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  padding: 32rpx;
}
.train-bookx-hotel-cross-rule-pop .cross-rule-content .title {
  -ms-flex-pack: start;
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  font-weight: 500;
  justify-content: start;
}
.train-bookx-hotel-cross-rule-pop .cross-rule-content .title .icon {
  background: #ff5959;
  border-radius: 4rpx;
  height: 24rpx;
  margin-right: 10rpx;
  width: 8rpx;
}
.train-bookx-hotel-cross-rule-pop .cross-rule-content .detail-content {
  background: #fafafa;
  border-radius: 12rpx;
  margin-top: 20rpx;
  padding: 24rpx 20rpx;
}
.train-bookx-hotel-cross-rule-pop .cross-rule-content .detail-content .item {
  margin-bottom: 30rpx;
}
.train-bookx-hotel-cross-rule-pop
  .cross-rule-content
  .detail-content
  .item
  .content {
  color: #333;
  font-family: PingFangSC-Semibold;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.train-bookx-hotel-cross-rule-pop
  .cross-rule-content
  .detail-content
  .item
  .desc {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
}
.train-bookx-hotel-cross-rule-pop
  .cross-rule-content
  .detail-content
  .item:last-child {
  margin-bottom: 0;
}
.train-bookx-hotel-cross-rule-pop .selfRec-content {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 14rpx 32rpx 32rpx;
}
.train-bookx-hotel-cross-rule-pop .selfRec-content .title {
  -ms-flex-pack: start;
  color: #333;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  font-weight: 500;
  justify-content: start;
  margin-bottom: 2rpx;
}
.train-bookx-hotel-cross-rule-pop .selfRec-content .title .icon {
  background: #ff5959;
  border-radius: 4rpx;
  height: 24rpx;
  margin-right: 10rpx;
  width: 8rpx;
}
.train-bookx-hotel-cross-rule-pop .selfRec-content .detail-content {
  flex-direction: row;
  flex-wrap: wrap;
}
.train-bookx-hotel-cross-rule-pop .selfRec-content .detail-content .item {
  width: 50%;
}
.train-bookx-hotel-cross-rule-pop
  .selfRec-content
  .detail-content
  .item
  .reason {
  background: -webkit-gradient(
    linear,
    right top,
    left top,
    from(#ffece8),
    to(#fff4f2)
  );
  background: -webkit-linear-gradient(right, #ffece8, #fff4f2);
  background: -o-linear-gradient(right, #ffece8 0, #fff4f2 100%);
  background: linear-gradient(-90deg, #ffece8, #fff4f2);
  border-radius: 12rpx;
  box-sizing: border-box;
  color: #ff5959;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  font-weight: 400;
  height: 64rpx;
  margin-right: 18rpx;
  margin-top: 18rpx;
}
.zx-common-btm-layer {
  bottom: 0;
  left: 0;
  position: fixed;
  right: 0;
  z-index: 22;
}
.zx-common-btm-layer .content {
  background-color: #fff;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 0 32rpx 0 rgba(0, 0, 0, 0.04);
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
  position: relative;
  z-index: 2;
}
