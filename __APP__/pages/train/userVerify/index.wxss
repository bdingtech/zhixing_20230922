@charset "UTF-8";
@import "/pages/train/sub-vendors.wxss";
page {
  background: #f5f5f5;
}
.user-verify-card {
  background: #fff;
  padding: 0 30rpx;
}
.user-verify .input-content {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 108rpx;
}
.user-verify .label {
  color: #666;
  font-size: 30rpx;
  height: 108rpx;
  line-height: 108rpx;
  width: 90rpx;
}
.user-verify .input {
  color: #333;
  flex: 1;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-left: 40rpx;
}
.user-verify .btn-content {
  padding: 44rpx 30rpx;
}
.user-verify .btn-content .btn {
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
}
.user-verify .verify-code,
.user-verify .verify-text {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 40rpx;
}
.user-verify .verify-code {
  color: #999;
}
.user-verify.zx .btn-content .btn {
  background-image: -webkit-linear-gradient(3deg, #0daeff, #07f);
  background-image: -o-linear-gradient(3deg, #0daeff 0, #07f 100%);
  background-image: linear-gradient(87deg, #0daeff, #07f);
}
.user-verify.ty .btn-content .btn {
  background-image: -webkit-gradient(
    linear,
    left top,
    right top,
    from(#ff9166),
    to(#ff5959)
  );
  background-image: -webkit-linear-gradient(left, #ff9166, #ff5959);
  background-image: -o-linear-gradient(left, #ff9166 0, #ff5959 100%);
  background-image: linear-gradient(90deg, #ff9166, #ff5959);
}
.user-verify .desc {
  color: #999;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.weixin-verify .verify-card {
  background: #fff;
  padding: 0 30rpx;
}
.weixin-verify .price-content {
  margin: auto;
  padding-bottom: 10rpx;
  padding-top: 42rpx;
  position: relative;
}
.weixin-verify .price {
  color: #333;
  font-size: 60rpx;
  font-weight: 600;
  text-align: center;
}
.weixin-verify .price:before {
  color: #333;
  content: "￥";
  font-size: 28rpx;
  font-weight: 400;
  margin-right: 8rpx;
}
.weixin-verify .tag {
  border-radius: 24rpx 24rpx 24rpx 4rpx;
  font-size: 22rpx;
  font-weight: 400;
  line-height: 36rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  position: absolute;
  right: 80rpx;
  top: 40rpx;
}
.weixin-verify.ty .tag {
  border: 1rpx solid #fc6e51;
  color: #fc6e51;
}
.weixin-verify.zx .tag {
  border: 1rpx solid #198cff;
  color: #198cff;
}
