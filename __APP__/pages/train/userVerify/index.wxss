  background-size: cover;
  height: 40rpx;
  margin-right: 14rpx;
  width: 40rpx;
}
.weixin-verify .desc {
  color: #999;
  font-size: 24rpx;
  font-weight: 400;
  padding-left: 50rpx;
}
.weixin-verify .desc:before {
  color: #999;
  content: "·";
  font-size: 30rpx;
  font-weight: 600;
  margin-right: 10rpx;
}
