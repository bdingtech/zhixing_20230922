@import "/pages/hotel/sub-vendors.wxss";
.hotel-date {
  -ms-flex-align: center;
  align-items: center;
  background-color: rgba(0, 128, 255, 0.05);
  border-radius: 8rpx;
  height: 76rpx;
  margin: 28rpx 24rpx 24rpx;
  padding: 0rpx 16rpx;
}
.hotel-date,
.hotel-date-bd {
  -ms-flex-pack: justify;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.hotel-date-bd {
  position: relative;
  width: 530rpx;
}
.hotel-date-bd::after {
  background: #d7d7d7;
  content: "";
  height: 2rpx;
  left: 50%;
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
}
.hotel-date-bd .date {
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  font-weight: 600;
  line-height: 40rpx;
}
.hotel-date-bd .txt {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 8rpx;
}
.hotel-date .rbox {
  color: #333;
  font-size: 22rpx;
}
.hotel-date .ifont-arr {
  color: #999;
  font-size: 18rpx;
  margin: -2rpx 0 0 6rpx;
}
.collect-box {
  background: #fff;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}
.hotel-sel-list {
  height: 100%;
}
.collect-box .banner {
  -ms-flex-align: center;
  -ms-flex-pack: justify;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #eee;
  justify-content: space-between;
  text-align: center;
}
.collect-box .banner,
.collect-box .banner .tab {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.collect-box .banner .tab {
  -ms-flex-pack: center;
  color: #333;
  flex-flow: row wrap;
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  font-weight: 400;
  height: 80rpx;
  justify-content: center;
  width: 100%;
}
.collect-box .banner .tab .name {
  padding: 16rpx 0;
  width: 100%;
}
.collect-box .banner .tab .active-line {
  border-radius: 3rpx;
  display: none;
  height: 6rpx;
  width: 32rpx;
}
.collect-box .banner .tab.color-primary .active-line {
  display: block;
}
.collect-box .banner .tab.color-primary.zx .active-line {
  background-color: #0080ff;
}
.collect-box .banner .tab.color-primary.ty .active-line {
  background-color: #fc6e51;
}
.collect-box .city-wrap {
  height: 60rpx;
  margin-bottom: 12rpx;
  padding: 0 20rpx;
  white-space: nowrap;
  width: calc(100% - 40rpx);
}
.collect-box .city-wrap .city {
  -ms-flex-align: center;
  -ms-flex-pack: center;
  align-items: center;
  background: #f3f3f3;
  border-radius: 8rpx;
  color: #666;
  display: -webkit-inline-flex;
  display: -ms-inline-flexbox;
  display: inline-flex;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  font-weight: 400;
  height: 60rpx;
  justify-content: center;
  margin-left: 16rpx;
  padding: 0 18rpx;
}
.collect-box .city-wrap .city:first-child {
  margin-left: 0;
}
.collect-box .city-wrap.zx .city.active {
  background-color: #0080ff;
  color: #fff;
}
.collect-box .city-wrap.ty .city.active {
  background-color: #fc6e51;
  color: #fff;
}
.collect-box .collect-list-box {
  flex: 1;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
  position: relative;
}
.collect-list-box .empty-image {
  height: 300rpx;
  left: 50%;
  margin-left: -260rpx;
  position: absolute;
  top: 300rpx;
  width: 520rpx;
}
.collect-list-box .empty-tit {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  left: 50%;
  letter-spacing: 0;
  position: absolute;
  text-align: center;
  top: 650rpx;
  transform: translate(-50%);
  width: 100%;
}
.slide-item {
  height: 160rpx;
  line-height: 48rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-align: center;
  width: 100vw;
}
.slide-item-wrap {
  height: 100%;
  position: relative;
  width: calc(100vw + 180rpx);
}
.slide-item-left {
  padding: 0 32rpx;
  width: 100vw;
  width: 686rpx;
}
.slide-item-left,
.slide-item-right {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.slide-item-right {
  -ms-flex-pack: center;
  -ms-flex-align: center;
  align-items: center;
  background: #f60;
  color: #fff;
  height: 100%;
  justify-content: center;
  position: absolute;
  right: 0;
  top: 0;
  width: 180rpx;
}
.slide-item .schoolLogo {
  height: 120rpx;
  width: 120rpx;
}
.slide-item .schoolInformation {
  padding-left: 8rpx;
  text-align: left;
}
