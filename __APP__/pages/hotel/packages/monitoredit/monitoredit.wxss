@import "/pages/hotel/sub-vendors.wxss";
page {
  background: #f5f5f5;
}
.cont {
  flex: 1;
}
.top {
  position: relative;
}
.top::after {
  background-repeat: no-repeat;
  background-size: cover;
  bottom: 6rpx;
  content: "";
  height: 206rpx;
  position: absolute;
  right: 0;
  width: 570rpx;
}
.top.zx {
  background: -webkit-linear-gradient(left, #2693ff, #06f);
}
.top.zx::after {
  background-image: url(https://pic.c-ctrip.com/train/zt/hotel/monitor-top-zx.png);
}
.top.ty {
  background: #3c4365;
}
.top.ty::after {
  background-image: url(https://pic.c-ctrip.com/train/zt/hotel/monitor-top-ty.png);
}
.top-bar {
  height: 88rpx;
  padding: 40rpx 230rpx 0 0;
  right: 0;
}
.top-bar .ifont-back {
  color: #fff;
  font-size: 36rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  width: 88rpx;
}
.top-bd {
  padding: 36rpx 40rpx 64rpx;
  position: relative;
  z-index: 2;
}
.top-bd .tit {
  color: #fff;
  font-size: 44rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.top-bd .txt {
  color: #fff;
  font-size: 24rpx;
  line-height: 32rpx;
  margin-top: 12rpx;
  opacity: 0.8;
}
.wrap {
  background: -webkit-linear-gradient(top, #fff, #f5f5f5 20%);
  border-radius: 32rpx 32rpx 0 0;
  margin-top: -34rpx;
  padding: 8rpx 16rpx 250rpx;
  position: relative;
  z-index: 5;
}
.white-box {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
}
.monitor-box {
  padding: 10rpx 30rpx;
}
.monitor-city {
  border-bottom: 1rpx solid #eee;
  padding-bottom: 1rpx;
}
.monitor-select {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  line-height: 98rpx;
}
.monitor-select .label {
  color: #666;
  font-size: 30rpx;
  width: 154rpx;
}
.monitor-select .cont {
  font-size: 36rpx;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.monitor-select .rbox {
  font-size: 30rpx;
  font-weight: 600;
  text-align: right;
}
.monitor-select .ifont-arr {
  font-size: 20rpx;
  font-weight: 400;
  margin: -4rpx 0 0 4rpx;
}
.monitor-city-tag {
  margin-bottom: 24rpx;
  position: relative;
}
.monitor-city-tag::after {
  background: -webkit-linear-gradient(left, hsla(0, 0%, 100%, 0), #fff);
  bottom: 0;
  content: "";
  height: 88rpx;
  position: absolute;
  right: 0;
  width: 40rpx;
  z-index: 5;
}
.monitor-city-tag.zx .item.cur {
  background: #f3f7ff;
  color: #0080ff;
}
.monitor-city-tag.ty .item.cur {
  background: #ffeae5;
  color: #fc6e51;
}
.monitor-box .tag-list {
  -webkit-overflow-scrolling: touch;
  overflow-x: auto;
  padding: 8rpx 0 16rpx;
  white-space: nowrap;
}
.monitor-box .tag-list .item {
  background: #f5f5f5;
  border-radius: 52rpx;
  color: #666;
  display: inline-block;
  font-size: 22rpx;
  line-height: 52rpx;
  margin-right: 16rpx;
  padding: 0 26rpx;
}
.monitor-price {
  margin: 10rpx 0 40rpx;
}
.monitor-price-hd {
  -ms-flex-pack: justify;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.monitor-price-hd .item {
  color: #999;
  font-size: 28rpx;
  line-height: 40rpx;
}
.monitor-price-bd {
  background: #e5e5e5;
  border-radius: 6rpx;
  height: 6rpx;
  margin: 30rpx 0 60rpx;
  position: relative;
}
.monitor-price-bd .line {
  border-radius: 6rpx;
  height: 6rpx;
  position: absolute;
  top: 0;
}
.monitor-price-bd .slide-block {
  background: url(https://pic.c-ctrip.com/train/zt/wechat/icon-slider.png)
    no-repeat;
  background-size: cover;
  height: 70rpx;
  position: absolute;
  top: -32rpx;
  transform: translateX(-50%);
  width: 70rpx;
  z-index: 2;
}
.monitor-type {
  -ms-flex-pack: justify;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.monitor-type .item {
  background: #f5f5f5;
  border-radius: 66rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 66rpx;
  padding: 0 22rpx;
}
.monitor-type.ty .item.cur {
  background: #ffeae5;
  color: #fc6e51;
}
.monitor-type.zx .item.cur {
  background: #f3f7ff;
  color: #0080ff;
}
.botm-fixed {
  background: #fff;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx calc(20rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
  z-index: 100;
}
.botm-fixed .txt {
  font-size: 24rpx;
  line-height: 34rpx;
  margin-bottom: 20rpx;
  text-align: center;
}
.botm-fixed .ifont-arr {
  font-size: 18rpx;
  font-weight: 400;
  margin: -4rpx 0 0 4rpx;
}
.botm-fixed .btn-primary {
  border-radius: 88rpx;
  font-size: 36rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}
