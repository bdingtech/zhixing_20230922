@charset "UTF-8";
@import "/pages/hotel/sub-vendors.wxss";
page {
  background: #f5f5f5;
}
.cont {
  flex: 1;
}
.monitor-top {
  background: #fff;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  padding: 40rpx 30rpx;
}
.monitor-top .tit {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
}
.monitor-top .txt {
  font-size: 24rpx;
  margin-top: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 560rpx;
}
.monitor-top .txt text {
  margin-right: 24rpx;
  white-space: nowrap;
}
.monitor-top .btn-edit {
  background: #f5f5f5;
  border-radius: 48rpx;
  font-size: 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin: 2rpx 0 0 30rpx;
  padding: 0;
  width: 96rpx;
}
.wrap {
  padding-bottom: 180rpx;
}
.monitor-tit {
  color: #666;
  font-size: 28rpx;
  margin: 40rpx 30rpx 20rpx;
  position: relative;
}
.monitor-tit .all {
  position: absolute;
  right: 0;
  top: 0;
}
.skeleton-item {
  background: #fff;
  border-radius: 16rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 20rpx;
  min-height: 136rpx;
  padding: 30rpx 30rpx 30rpx 180rpx;
  position: relative;
}
.skeleton-item .img {
  animation: breathing 1.2s infinite;
  background: #f5f5f5;
  border-radius: 6rpx;
  border-radius: 4rpx;
  bottom: 30rpx;
  height: auto;
  left: 30rpx;
  position: absolute;
  top: 30rpx;
  width: 120rpx;
}
.skeleton-item .s-tit {
  height: 44rpx;
}
.skeleton-item .s-tit,
.skeleton-item .s-txt {
  animation: breathing 1.2s infinite;
  background: #f5f5f5;
  border-radius: 4rpx;
  width: 450rpx;
}
.skeleton-item .s-btm,
.skeleton-item .s-txt {
  height: 34rpx;
  margin-top: 15rpx;
}
.skeleton-item .s-btm {
  animation: breathing 1.2s infinite;
  background: #f5f5f5;
  border-radius: 4rpx;
  width: 450rpx;
}
.monitor-list {
  padding: 0 24rpx;
}
.monitor-list .item {
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 20rpx;
  padding: 30rpx 30rpx 30rpx 180rpx;
  position: relative;
}
.monitor-list .img {
  border-radius: 6rpx;
  bottom: 30rpx;
  height: auto;
  left: 30rpx;
  position: absolute;
  top: 30rpx;
  width: 120rpx;
}
.monitor-list .tit {
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.monitor-list .txt {
  color: #666;
  font-size: 24rpx;
  line-height: 34rpx;
  margin-top: 2rpx;
}
.monitor-list .btm,
.monitor-list .price {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 6rpx;
  overflow: hidden;
}
.monitor-list .price {
  font-size: 36rpx;
  font-weight: 600;
}
.monitor-list .price::before {
  content: "¥";
  font-size: 20rpx;
  margin-right: 2rpx;
}
.monitor-list .price::after {
  color: #666;
  content: "参考价";
  display: inline-block;
  font-size: 22rpx;
  font-weight: 400;
  margin-left: 6rpx;
  vertical-align: middle;
}
.monitor-list .ifont-radio,
.monitor-list .ifont-radioed {
  font-size: 40rpx;
  margin-left: 40rpx;
}
.monitor-list .ifont-radio {
  color: #ccc;
}
.botm-fixed {
  background: #fff;
  bottom: 0;
  left: 0;
  padding: 20rpx 20rpx calc(20rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
  z-index: 100;
}
.botm-fixed .btn-submit {
  border-radius: 88rpx;
  font-size: 36rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}
@keyframes breathing {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}
@-webkit-keyframes breathing {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.3;
  }
  100% {
    opacity: 1;
  }
}
