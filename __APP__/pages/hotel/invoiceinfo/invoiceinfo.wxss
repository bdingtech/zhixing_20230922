@charset "UTF-8";
@import "/pages/hotel/sub-vendors.wxss";
.ht-invoiceinfo {
  padding: 16rpx;
}
.ht-invoiceinfo .status-wrap {
  -ms-flex-align: center;
  align-items: center;
  background: #fff;
  border-radius: 24rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  margin-bottom: 16rpx;
  padding: 32rpx;
  position: relative;
}
.ht-invoiceinfo .status-wrap .icon-wrap {
  bottom: 0;
  position: absolute;
  right: 0;
  width: 120rpx;
}
.ht-invoiceinfo .status-wrap .icon {
  height: 100rpx;
  width: 120rpx;
}
.ht-invoiceinfo .status-wrap .tit {
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 42rpx;
}
.ht-invoiceinfo .status-wrap .desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
  margin-top: 8rpx;
}
.ht-invoiceinfo .info-wrap {
  background: #fff;
  border-radius: 24rpx;
}
.ht-invoiceinfo .info-tit-wrap {
  padding-top: 40rpx;
  text-align: center;
  width: 100%;
}
.ht-invoiceinfo .info-tit-wrap .titimg {
  height: 74rpx;
  width: 398rpx;
}
.ht-invoiceinfo .info-tit-wrap .price {
  color: #ff5959;
  font-family: PingFangSC-Regular;
  font-size: 62rpx;
  font-weight: 400;
  line-height: 62rpx;
  margin-top: 20rpx;
}
.ht-invoiceinfo .info-tit-wrap .price::before {
  content: "¥";
  font-size: 36rpx;
  font-weight: 400;
}
.ht-invoiceinfo .info-tit-wrap .desc {
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 36rpx;
}
.ht-invoiceinfo .break-line {
  -ms-flex-align: center;
  -ms-flex-pack: justify;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: space-between;
}
.ht-invoiceinfo .break-line .left-circle,
.ht-invoiceinfo .break-line .right-circle {
  background: #efefef;
  border-radius: 50%;
  height: 30rpx;
  width: 30rpx;
}
.ht-invoiceinfo .break-line .left-circle {
  margin-left: -15rpx;
  margin-right: 15rpx;
}
.ht-invoiceinfo .break-line .right-circle {
  margin-left: 15rpx;
  margin-right: -15rpx;
}
.ht-invoiceinfo .dashed-line {
  border-bottom: 1rpx dashed rgba(0, 0, 0, 0.1);
  height: 2rpx;
  margin: 25rpx 0;
  width: 100%;
}
.ht-invoiceinfo .info-list {
  padding: 0 32rpx 40rpx;
}
.ht-invoiceinfo .info-list .list:last-child {
  margin-bottom: 0;
}
.ht-invoiceinfo .list {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 36rpx;
  margin-bottom: 24rpx;
}
.ht-invoiceinfo .list .label {
  color: #999;
  width: 160rpx;
}
.ht-invoiceinfo .list .value {
  color: #222;
  flex: 1;
}
.ht-invoiceinfo .pay-wrap {
  -ms-flex-align: center;
  -ms-flex-pack: justify;
  align-items: center;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  bottom: 0;
  box-shadow: 0 0 32rpx 0 rgba(0, 0, 0, 0.04);
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  justify-content: space-between;
  left: 0;
  padding: 16rpx 16rpx calc(16rpx + env(safe-area-inset-bottom));
  position: fixed;
  right: 0;
}
.ht-invoiceinfo .pay-wrap .price-wrap {
  padding-left: 20rpx;
}
.ht-invoiceinfo .pay-wrap .price-wrap .price {
  color: #ff5959;
  font-family: PingFangSC-Regular;
  font-size: 48rpx;
  font-weight: 700;
  line-height: 40rpx;
}
.ht-invoiceinfo .pay-wrap .price-wrap .price::before {
  content: "¥";
  font-family: PingFangSC-Regular;
  font-size: 36rpx;
  font-weight: 700;
}
.ht-invoiceinfo .pay-wrap .price-wrap .desc {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 22rpx;
  font-weight: 400;
}
.ht-invoiceinfo .pay-wrap .pay-btn {
  -ms-flex-pack: center;
  background: #ff5959;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  font-weight: 500;
  height: 88rpx;
  justify-content: center;
  line-height: 44rpx;
  width: 330rpx;
}
.ht-invoiceinfo .delivery-info,
.ht-invoiceinfo .pay-wrap .pay-btn {
  -ms-flex-align: center;
  align-items: center;
  border-radius: 24rpx;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.ht-invoiceinfo .delivery-info {
  -ms-flex-pack: justify;
  background: #fff;
  justify-content: space-between;
  margin: 16rpx 0;
  padding: 26rpx 32rpx;
}
.ht-invoiceinfo .delivery-info .dwrap {
  -ms-flex-align: center;
  align-items: center;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.ht-invoiceinfo .delivery-info .dcode,
.ht-invoiceinfo .delivery-info .dname {
  color: #999;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 32rpx;
}
.ht-invoiceinfo .delivery-info .dcode {
  color: #222;
  margin-left: 16rpx;
}
.ht-invoiceinfo .delivery-info .copy {
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 36rpx;
}
