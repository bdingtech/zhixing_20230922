@import "/pages/hotel/sub-vendors.wxss";
.picture-scroll {
  background-color: #1b1b1b;
  bottom: 0;
  height: 100%;
  left: 0;
  position: absolute;
  right: 0;
  top: 0;
  white-space: nowrap;
}
.picture-item_show {
  display: inline-block;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}
.picture-item_detail {
  bottom: 0;
  box-sizing: border-box;
  color: #fff;
  left: 0;
  padding: 10rpx;
  position: absolute;
  right: 0;
  white-space: pre-wrap;
}
.picture-item_title {
  float: left;
  font-size: 32rpx;
  line-height: 1.8;
  padding-right: 90rpx;
}
.picture-item_number {
  float: right;
  font-size: 24rpx;
  margin-left: -90rpx;
}
image {
  display: inline-block;
}
