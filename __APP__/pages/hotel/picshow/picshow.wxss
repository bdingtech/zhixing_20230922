@import "/pages/hotel/sub-vendors.wxss";
.hotel-picshow-tab {
  background: #fff;
  flex-flow: row wrap;
  padding: 15rpx 30rpx;
}
.hotel-picshow-tab,
.hotel-picshow-tab .item {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.hotel-picshow-tab .item {
  -ms-flex-align: center;
  -ms-flex-pack: center;
  align-items: center;
  background: #f7f7f7;
  border-radius: 4rpx;
  box-sizing: border-box;
  color: #666;
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  font-weight: 400;
  height: 60rpx;
  justify-content: center;
  margin: 0 15rpx 15rpx 0;
  padding: 14rpx 30rpx;
}
.hotel-picshow-tab .item text {
  display: block;
  font-size: 24rpx;
}
.hotel-picshow-tab .item.cur {
  position: relative;
}
.hotel-picshow-tab.zx .item.cur {
  background: rgba(0, 128, 255, 0.1);
  border: 1rpx solid rgba(0, 128, 255, 0.4);
  border-radius: 4rpx;
  color: #0080ff;
}
.hotel-picshow-tab.ty .item.cur {
  background: rgba(252, 110, 81, 0.1);
  border: 1rpx solid rgba(252, 110, 81, 0.4);
  border-radius: 4rpx;
  color: #fc6e51;
}
.hotel-picshow-bd {
  overflow: hidden;
  padding: 30rpx 0 0 30rpx;
}
.hotel-picshow-bd .item {
  border-radius: 8rpx;
  box-sizing: border-box;
  float: left;
  height: 245rpx;
  margin-bottom: 30rpx;
  margin-right: 30rpx;
  position: relative;
  width: calc(50% - 60rpx / 2);
}
.hotel-picshow-bd .item.mr0 {
  margin-right: 0;
}
.hotel-picshow-bd .item image {
  border-radius: 8rpx;
  height: 245rpx;
  width: 100%;
}
.hotel-picshow-bd .item .txt {
  background: -webkit-linear-gradient(top, transparent, rgba(0, 0, 0, 0.4));
  border-radius: 8rpx;
  bottom: 0;
  color: #fff;
  font-size: 32rpx;
  height: 76rpx;
  left: 0;
  line-height: 76rpx;
  padding: 0 20rpx;
  position: absolute;
  right: 30rpx;
  width: 100%;
}
